<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="appBackground">
        <item name="android:background">#0E0E0E</item>
    </style>
	<style name="wxxr_title_bar">
	    <item name="android:padding">8dp</item>
	    <item name="android:background">@drawable/top_bar_bj</item>
	</style>
	<style name="top_bar_title_style">
	    <item name="android:textColor">#AEAEAE</item>
	    <item name="android:textSize">18sp</item>
	</style>
	
	<!-- 标题栏背景样式-->
	<style name="style_title_bar_bg">
	    <item name="android:background">#0000ff</item>
	</style>
    
    <!-- 标题栏样式 -->
    <style name="style_title_bar">
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
    </style>
    
    <!-- 标题栏左侧按钮样式   -->
    <style name="style_ib_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_title_bar_left_navi</item>
        <item name="android:background">@null</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    
    <!-- 标题栏标题文本样式 -->
    <style name="style_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#7a7a7a</item>
    </style>
    
    <style name="slideMenuStyle">
        <item name="android:textColor">#262628</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
    <style name="userMsgStyle">
        <item name="android:textColor">#262628</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="redTextStyle">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingRight">2dp</item>
    </style>
    
    <style name="qsxqTextTitleStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:background">@drawable/tip_title_bj</item>
    </style>
    
	<style name="qsxqTextTitleStyle_item_tv">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>    
</resources>
