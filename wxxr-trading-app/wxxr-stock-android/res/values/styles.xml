<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="appBackground">
        <item name="android:background">#0E0E0E</item>
    </style>

    <style name="wxxr_title_bar">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/top_bar_bj</item>
    </style>

    <style name="top_bar_title_style">
        <item name="android:textColor">#AEAEAE</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 标题栏背景样式 -->
    <style name="style_title_bar_bg">
        <item name="android:background">#0000ff</item>
    </style>

    <!-- 标题栏样式 -->
    <style name="style_title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
    </style>

    <!-- 标题栏左侧按钮样式 -->
    <style name="style_ib_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_title_bar_left_navi</item>
        <item name="android:background">@null</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <!-- 标题栏标题文本样式 -->
    <style name="style_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#7a7a7a</item>
    </style>

    <style name="slideMenuStyle">
        <item name="android:textColor">#262628</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="userMsgStyle">
        <item name="android:textColor">#262628</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="redTextStyle">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="qsxqTextTitleStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:background">@drawable/tip_title_bj</item>
    </style>
	<style name="qsxqTextTitleStyle_02">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:background">@drawable/tip_title_bj</item>
    </style>    

    <style name="qsxqTextTitleStyle_01">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:background">@drawable/tip_title_bj_01</item>
    </style>

    <style name="qsxqTextTitleStyle_item_tv">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="create_buy_radion_button">
        <item name="android:background">@drawable/bg_btn_stop_loss</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="red_button_style">
        <item name="android:background">@drawable/buy_btn_up</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="buy_red_button_style">
        <item name="android:background">@drawable/buy_button_red_btn</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="buy_bule_button_style">
        <item name="android:background">@drawable/buy_button_bule_btn</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="mListView">
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:divider">@null</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:minWidth">90dp</item>
        <item name="android:maxHeight">80dp</item>
        <item name="android:maxWidth">120dp</item>
    </style>
    <!-- 软键盘 -->
    <!-- 股价、股数 -->
    <style name="num_keyboard_stock_price_number">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">2dip</item>
    </style>

    <style name="num_keyboard_stock_price_number_ok">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dip</item>
    </style>

    <!-- 市价、%号、全部、比例 -->
    <style name="num_keyboard_stock_price_number_double">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">2dip</item>
    </style>

    <style name="FullScreenDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="myDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
 <!-- 半透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
 <!-- 模糊 -->
    </style>

    <style name="h_line_top_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#2F2E30</item>
    </style>

    <style name="LoginRegisterBtnStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/red_btn_selector</item>
    </style>

    <style name="LabelStyle">
        <item name="android:textColor">#959E9D</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonLabelStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#ffffff00</item>
        <item name="android:shadowDx">20</item>
        <item name="android:shadowDy">20</item>
        <item name="android:shadowRadius">20</item>
    </style>

    <style name="WhiteBtnStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/white_btn_selector</item>
    </style>

</resources>