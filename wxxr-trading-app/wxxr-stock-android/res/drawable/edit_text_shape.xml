<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 边框框颜色值 -->

    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#ff0000" />

            <corners android:radius="2.0dip" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" >
            </padding>
        </shape>
    </item>
    <!-- 主体背景颜色值 -->

    <item
        android:bottom="3dp"
        android:right="3dp">
        <shape>
            <solid android:color="#22ffffff" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

</layer-list>