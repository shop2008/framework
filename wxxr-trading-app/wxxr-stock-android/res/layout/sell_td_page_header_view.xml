<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_background_color"
     >
	<LinearLayout
        android:id="@+id/tl_deal_record_list"
        android:layout_width="match_parent"
        android:layout_height="60dip" 
        bind:field="*"
	    bind:on_Click="handleStockClick"
        >
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:background="#c60001"
		    android:gravity="center"
		    android:orientation="horizontal">
		    <ImageView
			    android:id="@+id/imageView1"
			    android:layout_width="48dp"
			    android:layout_height="48dp"
			    android:visibility="gone"
			    android:src="@drawable/warn_icons" 
			    android:layout_marginLeft="8dp"/>
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:orientation="vertical">
				<TextView
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_weight="1"
	                android:text="当前交易日" 
	                android:gravity="center"
	                android:textSize="13sp"
	                android:textColor="@color/white"
	                />

			    <TextView
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_weight="1"
	                android:text="--" 
	                android:gravity="center"
	                bind:field="sellDay" 
	                android:textSize="14sp"
	                android:textStyle="bold"
	                android:textColor="@color/white"
	                />
		    </LinearLayout>
		</LinearLayout>
		<View android:layout_width="0.5dp"
		    android:layout_height="fill_parent"
		    android:background="#000000"/>
		<View android:layout_width="0.5dp"
		    android:layout_height="fill_parent"
		    android:background="#2F2E30"/>
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1.5"
		    android:orientation="vertical">
		    <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="13sp"
                android:text="@string/tv_profit_loss_rate_label" 
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="--" 
                bind:field="gainRate"
                android:gravity="center"
                android:textSize="14sp"
	            android:textStyle="bold"
                android:textColor="@color/white"
                />
		</LinearLayout>
		<View android:layout_width="0.5dp"
		    android:layout_height="fill_parent"
		    android:background="#000000"/>
		<View android:layout_width="0.5dp"
		    android:layout_height="fill_parent"
		    android:background="#2F2E30"/>
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1.5"
		    android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="13sp"
                android:text="@string/tv_profit_loss_amount_label" 
                android:textColor="@color/white"
                />
		    <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="--" 
                bind:field="totalGain" 
                android:gravity="center"
                android:textSize="14sp"
	            android:textStyle="bold"
                android:textColor="@color/white"
                />	
		</LinearLayout>			
    	</LinearLayout>    
			<View android:layout_width="fill_parent"
		          android:layout_height="0.5dp"
		          android:background="#2F2E30"/>			
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="#222325"
		        >
		        <TextView 
		            android:layout_width="fill_parent"
		            android:layout_height="32dp"
		            android:layout_weight="1"
		            android:enabled="false"
		            android:text="股票"
		            android:textColor="#989e9e"
		            android:gravity="center"
		            android:textSize="15sp"
		            />
				<View android:layout_width="0.5dp"
		            android:layout_height="32dp"
		            android:background="#000000"/>
		        <View android:layout_width="0.5dp"
		            android:layout_height="32dp"
		            android:background="#2F2E30"/>
		        <TextView 
		            android:layout_width="fill_parent"
		            android:layout_height="32dp"
		            android:layout_weight="1"
		            android:enabled="false"
		            android:text="最新"
		            android:textColor="#989e9e"
		            android:gravity="center"
		            android:textSize="15sp"
		            />
				<View android:layout_width="0.5dp"
		            android:layout_height="32dp"
		            android:background="#000000"/>
		        <View android:layout_width="0.5dp"
		            android:layout_height="32dp"
		            android:background="#2F2E30"/>
		        <TextView 
		            android:layout_width="fill_parent"
		            android:layout_height="32dp"
		            android:layout_weight="1"
		            android:enabled="false"
		            android:text="价量"
		            android:textColor="#989e9e"
		            android:gravity="center"
		            android:textSize="15sp"
		            />
				<View android:layout_width="0.5dp"
		            android:layout_height="32dp"
		            android:background="#000000"/>
		        <View android:layout_width="0.5dp"
		            android:layout_height="32dp"
		            android:background="#2F2E30"/>
		        <TextView 
		            android:layout_width="fill_parent"
		            android:layout_height="32dp"
		            android:layout_weight="1"
		            android:enabled="false"
		            android:text="盈亏"
		            android:textColor="#989e9e"
		            android:gravity="center"
		            android:textSize="15sp"
		            />
		    </LinearLayout>
			<View android:layout_width="fill_parent"
			      android:layout_height="0.5dp"
			      android:background="#000000"/>		 
</LinearLayout>
