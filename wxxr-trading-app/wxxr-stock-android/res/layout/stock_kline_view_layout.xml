<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <TextView
            android:id="@+id/stock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="----"
            android:textColor="@color/white"
            android:textSize="15sp"
            bind:field="name" />

        <TextView
            android:id="@+id/stock_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/stock_name"
            android:text="(--.--)"
            android:textColor="@color/white"
            android:textSize="12sp"
            bind:field="code" />
        <!-- 个股界面显示 -->

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/stock_code"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:text="--"
            android:textColor="@color/white"
            android:textSize="10sp"
            bind:field="time" />

        <TextView
            android:id="@+id/up_rates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/time"
            android:layout_alignParentRight="true"
            android:text="(--)"
            android:textColor="@color/white"
            android:textSize="10sp"
            bind:field="risefallRate" />

        <TextView
            android:id="@+id/up_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/time"
            android:layout_marginRight="4dip"
            android:layout_toLeftOf="@id/up_rates"
            android:text="--"
            android:textColor="@color/white"
            android:textSize="10sp"
            bind:field="change" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingRight="24dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                bind:field="newprice" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/up_arrows"
                bind:field="newpriceIcon" />
        </LinearLayout>
        <!-- 买入界面显示 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dip"
            android:gravity="right|center_vertical"
            bind:field="buyRateLayout" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/handrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="换手:"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/lb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/handrate"
                    android:text="量比:"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/handrate"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    bind:field="handrate" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/handrate"
                    android:layout_toRightOf="@id/lb"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    bind:field="lb" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/secuamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="成交额:"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/capital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/secuamount"
                    android:text="流通盘:"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/secuamount"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    bind:field="secuamount" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/secuamount"
                    android:layout_toRightOf="@id/capital"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    bind:field="capital" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.wxxr.mobile.stock.client.widget.KLineView
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="15dip"
        bind:field="dayLineList" />

</LinearLayout>