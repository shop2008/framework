<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    xmlns:bind="http://wxxr.com.cn/binding"
    android:background="@color/page_background_color">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:fadingEdge="none" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:padding="8dp">
			<LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#202123"
                android:orientation="vertical">
	    		<TextView
	    		    android:id="@+id/textView1"
	    		    android:layout_width="wrap_content"
	    		    android:layout_height="32dp"
	    		    android:text="盈亏结算" 
	    		    style="@style/qsxqTextTitleStyle_01"/>
	    		<RelativeLayout
	    		    android:layout_width="fill_parent"
	    		    android:layout_height="wrap_content"
	    		    android:layout_marginLeft="20dp" 
	    		    android:layout_marginRight="26dp"
	    		    android:layout_marginTop="0dp">
	
	    		    <TextView
	    		        android:id="@+id/textView2"
	    		        android:layout_width="wrap_content"
	    		        android:layout_height="wrap_content"
	    		        android:layout_alignParentLeft="true"
	    		        android:text="模拟盘额度" 
	    		        style="@style/qsxqTextTitleStyle_item_tv"/>
	
	    		    <TextView
	    		        android:id="@+id/textView3"
	    		        android:layout_width="wrap_content"
	    		        android:layout_height="wrap_content"
	    		        android:layout_alignParentRight="true"
	    		        android:text="--" 
	    		        bind:field="fund"
	    		        style="@style/qsxqTextTitleStyle_item_tv"/>
	    		</RelativeLayout>
	
	    		<RelativeLayout
	    		    android:layout_width="fill_parent"
	    		    android:layout_height="wrap_content"
	    		    android:layout_marginLeft="20dp"
	    		    android:layout_marginRight="26dp"
	    		    android:layout_marginTop="8dp" >
	
	    		    <TextView
	    		        android:id="@+id/textView2"
	    		        style="@style/qsxqTextTitleStyle_item_tv"
	    		        android:layout_width="wrap_content"
	    		        android:layout_height="wrap_content"
	    		        android:layout_alignParentLeft="true"
	    		        android:text="模拟盘盈亏率" />
	
	    		    <TextView
	    		        android:id="@+id/textView3"
	    		        style="@style/qsxqTextTitleStyle_item_tv"
	    		        android:layout_width="wrap_content"
	    		        android:layout_height="wrap_content"
	    		        android:layout_alignParentRight="true"
	    		        android:text="--" 
	    		        bind:field="plRisk"/>
	    		</RelativeLayout>
	
	    		<RelativeLayout
	    		    android:layout_width="fill_parent"
	    		    android:layout_height="wrap_content"
	    		    android:layout_marginLeft="20dp" 
	    		    android:layout_marginRight="26dp"
	    		    android:layout_marginTop="8dp">
	
	    		    <TextView
	    		        android:id="@+id/textView2"
	    		        android:layout_width="wrap_content"
	    		        android:layout_height="wrap_content"
	    		        android:layout_alignParentLeft="true"
	    		        android:text="模拟盘收益" 
	    		        style="@style/qsxqTextTitleStyle_item_tv"/>
	
	    		    <TextView
	    		        android:id="@+id/textView3"
	    		        android:layout_width="wrap_content"
	    		        android:layout_height="wrap_content"
	    		        android:layout_alignParentRight="true"
	    		        android:text="--" 
	    		        bind:field="totalGain"
	    		        style="@style/qsxqTextTitleStyle_item_tv"/>
	    		</RelativeLayout>
	    		<View android:layout_width="fill_parent"
	    		    android:layout_height="1dp"
	    		    android:background="#000000"
	    		    android:layout_marginTop="8dp"/>	    			    		                
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#202123"
                android:orientation="vertical"
                android:visibility="gone">
				<TextView
	    		    android:id="@+id/textView1"
	    		    android:layout_width="wrap_content"
	    		    android:layout_height="32dp"
	    		    android:text="收益分配" 
	    		    style="@style/qsxqTextTitleStyle_01"/>
				<RelativeLayout
	    		    android:layout_width="fill_parent"
	    		    android:layout_height="wrap_content"
	    		    android:layout_marginLeft="20dp" 
	    		    android:layout_marginRight="26dp">
	
	    		    <TextView
	    		        android:id="@+id/textView2"
	    		        android:layout_width="wrap_content"
	    		        android:layout_height="wrap_content"
	    		        android:layout_alignParentLeft="true"
	    		        android:text="补偿交易综合费" 
	    		        style="@style/qsxqTextTitleStyle_item_tv"/>
	
	    		    <TextView
	    		        android:id="@+id/textView3"
	    		        android:layout_width="wrap_content"
	    		        android:layout_height="wrap_content"
	    		        android:layout_alignParentRight="true"
	    		        android:text="--" 
	    		        bind:field="tradingCost"
	    		        style="@style/qsxqTextTitleStyle_item_tv"/>
	    		</RelativeLayout>
	    		<RelativeLayout
	    		    android:layout_width="fill_parent"
	    		    android:layout_height="wrap_content"
	    		    android:layout_marginLeft="20dp" 
	    		    android:layout_marginRight="26dp"
	    		    android:layout_marginTop="8dp">
	
	    		    <TextView
	    		        android:id="@+id/textView2"
	    		        android:layout_width="wrap_content"
	    		        android:layout_height="wrap_content"
	    		        android:layout_alignParentLeft="true"
	    		        android:text="账户管理费" 
	    		        style="@style/qsxqTextTitleStyle_item_tv"/>
	
	    		    <TextView
	    		        android:id="@+id/textView3"
	    		        android:layout_width="wrap_content"
	    		        android:layout_height="wrap_content"
	    		        android:layout_alignParentRight="true"
	    		        android:text="--" 
	    		        bind:field="accountPay"
	    		        style="@style/qsxqTextTitleStyle_item_tv"/>
	    		</RelativeLayout>
	    		<RelativeLayout
	    		    android:layout_width="fill_parent"
	    		    android:layout_height="wrap_content"
	    		    android:layout_marginLeft="20dp" 
	    		    android:layout_marginRight="26dp"
	    		    android:layout_marginTop="8dp">
	
	    		    <TextView
	    		        android:id="@+id/textView2"
	    		        android:layout_width="wrap_content"
	    		        android:layout_height="wrap_content"
	    		        android:layout_alignParentLeft="true"
	    		        android:text="玩家实得收益" 
	    		        style="@style/qsxqTextTitleStyle_item_tv"/>
	
	    		    <TextView
	    		        android:id="@+id/textView3"
	    		        android:layout_width="wrap_content"
	    		        android:layout_height="wrap_content"
	    		        android:layout_alignParentRight="true"
	    		        android:text="--" 
	    		        bind:field="userGain"
	    		        style="@style/qsxqTextTitleStyle_item_tv"/>
	    		</RelativeLayout>				
					    		
                <View android:layout_width="fill_parent"
	    		    android:layout_height="1dp"
	    		    android:background="#000000"
	    		    android:layout_marginTop="8dp"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#202123"
                android:orientation="vertical">
	    		<TextView
	    		    android:id="@+id/textView1"
	    		    android:layout_width="wrap_content"
	    		    android:layout_height="32dp"
	    		    android:text="其它" 
					style="@style/qsxqTextTitleStyle_01"/> 
				<RelativeLayout
	    		    android:layout_width="fill_parent"
	    		    android:layout_height="wrap_content"
	    		    android:layout_marginLeft="20dp" 
	    		    android:layout_marginRight="26dp">
	
	    		    <TextView
	    		        android:id="@+id/textView2"
	    		        android:layout_width="wrap_content"
	    		        android:layout_height="wrap_content"
	    		        android:layout_alignParentLeft="true"
	    		        android:text="中止止损" 
	    		        style="@style/qsxqTextTitleStyle_item_tv"/>
	
	    		    <TextView
	    		        android:id="@+id/textView3"
	    		        android:layout_width="wrap_content"
	    		        android:layout_height="wrap_content"
	    		        android:layout_alignParentRight="true"
	    		        android:text="--" 
	    		        bind:field="capitalRate"
	    		        style="@style/qsxqTextTitleStyle_item_tv"/>
	    		</RelativeLayout>					               
                <View android:layout_width="fill_parent"
	    		    android:layout_height="1dp"
	    		    android:background="#000000"
	    		    android:layout_marginTop="8dp"/>
            </LinearLayout>       
        </LinearLayout>
    </ScrollView>
</LinearLayout>