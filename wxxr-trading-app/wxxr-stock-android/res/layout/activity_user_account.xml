<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <include 
        layout="@layout/activity_title_bar"
        />
    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/bg_user_account" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/tv_balance_label" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/tv_freeze_label" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/tv_usable_label" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_balance_text"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="@string/tv_default_text"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_freeze_text"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="@string/tv_default_text"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_usable_text"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="@string/tv_default_text"
                android:gravity="center" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/bg_user_account"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_extract_cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:clickable="true"
            android:background="@drawable/bg_rl_user_account"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dip"
                android:textColor="@color/black"
                android:text="@string/tv_extract_cash" />

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_right" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@drawable/divider_horizontal" />

        <RelativeLayout
            android:id="@+id/rl_income_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:clickable="true"
            android:background="@drawable/bg_rl_user_account"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dip"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="@string/tv_income_detail" />

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_right" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>