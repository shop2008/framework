<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:orientation="vertical" 
    android:background="@color/page_background_color">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View android:layout_width="fill_parent"
	        android:layout_height="0.5dp"
	        android:background="#2F2E30"/>
	 	<RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="44dp"
		    android:background="#1F2122">
		    <ImageButton
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:src="@drawable/back_button_style"
		        android:background="@null"
		        bind:field="*"
		        bind:on_Click="handleClick" 
		        android:layout_marginLeft="6dp"/>		    
		    <TextView
		        android:id="@id/tv_title_content"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:text="个股界面"
		        android:textColor="#ffffff"
		        android:textSize="17.0sp"
		        android:textStyle="bold"/>
		    <ImageButton
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:src="@drawable/add_stock_button_style"
		        android:background="@null"
		        bind:field="addStockField"
		        bind:on_Click="addStockClick" 
		        android:layout_marginLeft="6dp"/>
		    <ImageButton
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:src="@drawable/del_stock_button_style"
		        android:background="@null"
		        bind:field="delStockField"
		        android:visibility="invisible"
		        bind:on_Click="delStockClick" 
		        android:layout_marginLeft="6dp"/>		    
		</RelativeLayout>           
    </LinearLayout>
<com.wxxr.mobile.stock.client.widget.PullToRefreshView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/buy_btn"
    android:layout_below="@id/date_layout"
    android:orientation="vertical"
    bind:field="acctRefreshView"
    android:layout_weight="1"
    bind:on_PullRefresh="handleRefresh" >
    <com.wxxr.mobile.stock.client.widget.ScrollViewExtend
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" 
        android:scrollbars="none"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
               <android.support.v4.view.ViewPager
                    android:id="@+id/content_frame"
                    android:layout_width="match_parent"
                    android:layout_height="202dp"
                    bind:field="contents" 
                    bind:on_PageChange="handlerPageChanged" >
                </android.support.v4.view.ViewPager>
                <com.wxxr.mobile.stock.client.widget.ViewPagerIndexGroup
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     bind:field="indexGroup" 
                     android:layout_marginTop="6dp"
                     android:layout_marginBottom="8dp">
                </com.wxxr.mobile.stock.client.widget.ViewPagerIndexGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" 
                android:layout_marginTop="6dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="昨收：" 
                            android:textColor="@color/tv_gray_color"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="--" 
                            bind:field="close"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="今开：" 
                            bind:field="openLabel"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="--"
                            bind:field="open"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>

                <include layout="@layout/hlines"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="最高："
                            android:textSize="14sp"
                            bind:field="highLabel"
                            android:textColor="@color/red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="--"
                            android:textSize="14sp"
                            bind:field="high"
                            android:textColor="@color/red" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="最低："
                            android:textSize="14sp"
                            bind:field="lowLabel"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="--"
                            bind:field="low"
                            android:textSize="14sp"
                            android:textColor="@color/red" />
                    </RelativeLayout>
                </LinearLayout>

                <include layout="@layout/hlines"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="均价："
                            bind:field="averagepriceLabel"
                            android:textColor="@color/red" 
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="--"
                            android:textSize="14sp"
                            bind:field="averageprice"
                            android:textColor="@color/red" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="市盈率："
                            android:textSize="14sp"
                            android:textColor="@color/tv_gray_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="--"
                            android:textSize="14sp"
                            bind:field="profitrate"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </LinearLayout>

                <include layout="@layout/hlines"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="量比："
                            android:textSize="14sp"
                            android:textColor="@color/tv_gray_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="--"
                            bind:field="lb"
                            android:textSize="14sp"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="换手率："
                            android:textSize="14sp"
                            android:textColor="@color/tv_gray_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="--"
                            android:textSize="14sp"
                            bind:field="handrate"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </LinearLayout>

                <include layout="@layout/hlines"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="成交量："
                            android:textSize="14sp"
                            android:textColor="@color/tv_gray_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="--"
                            android:textSize="14sp"
                            bind:field="secuvolume"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="成交额："
                            android:textSize="14sp"
                            android:textColor="@color/tv_gray_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="--"
                            android:textSize="14sp"
                            bind:field="secuamount"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </LinearLayout>

                <include layout="@layout/hlines"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="流通盘："
                            android:textSize="14sp"
                            android:textColor="@color/tv_gray_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="--"
                            android:textSize="14sp"
                            bind:field="capital"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="总市值："
                            android:textSize="14sp"
                            android:textColor="@color/tv_gray_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="--"
                            android:textSize="14sp"
                            bind:field="marketvalue"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </LinearLayout>
                <include layout="@layout/hlines"/>
            </LinearLayout>
        </LinearLayout>
    </com.wxxr.mobile.stock.client.widget.ScrollViewExtend>
</com.wxxr.mobile.stock.client.widget.PullToRefreshView>
</LinearLayout>