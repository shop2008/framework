<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bar_background"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <ImageButton
        android:id="@id/ib_toggle_left_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:src="@drawable/list_up"
        android:background="@null"
        bind:field="leftIcon"
        bind:on_Click="handleClick" />

    <TextView
        android:id="@id/tv_title_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="@string/stock_app_title"
        android:textColor="#8a8a8a"
        android:textSize="20sp"
        android:textStyle="bold"
        bind:field="title" />

    <ImageButton
        android:id="@id/ib_toggle_right_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/user_up"
        android:visibility="invisible"
        bind:field="rightIcon"
        bind:on_Click="handleClick" />

    <ImageButton
        android:id="@id/ib_toggle_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/ib_toggle_right_menu"
        android:background="@null"
        android:src="@drawable/find_up"
        android:visibility="invisible"
        bind:field="searchIcon"
        bind:on_Click="handleClick" />

</RelativeLayout>