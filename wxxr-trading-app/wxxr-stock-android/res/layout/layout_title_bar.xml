<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
   android:background="@drawable/title_bar_bj"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    >
	<ImageView
        android:id="@id/ib_toggle_left_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/list_button" /> 
    

    
    <TextView 
        android:id="@id/tv_title_content"
        style="@style/style_title_text"
        />

    <ImageView
        android:id="@id/ib_toggle_right_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/message_button" />

    <ImageView
        android:id="@id/ib_toggle_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/ib_toggle_right_menu"
        android:src="@drawable/finds" />

</RelativeLayout>