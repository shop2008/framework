<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    bind:field="backgroundColor"
    android:background="@drawable/listview_selected_item1">
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        bind:field="imgItem">
	     <ImageView 
	         android:layout_width="fill_parent"
	         android:layout_height="100dp"
	         bind:field="imgUrl"/>
		<TextView
	         android:id="@+id/textView1"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         bind:field="title1"
	         android:text="--"
	         android:padding="6dp"
	         android:layout_alignParentLeft="true"
	         android:singleLine="true"
	         android:textColor="@color/white"
	         android:textSize="15sp" />     
    </RelativeLayout>
   <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:padding="6dp"
        android:gravity="center"
        bind:field="textItem"
        >
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:orientation="vertical">
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            bind:field="title"
	            android:text="--"
	            android:layout_alignParentLeft="true"
	            android:singleLine="true"
	            android:textColor="@color/white"
	            android:textSize="15sp" />
	        <TextView
	            android:id="@id/tv_help_content"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/tv_help_title"
	            android:text="--" 
	            bind:field="abstractInfo"
	            android:textColor="@color/white"
	            android:lines="2"
	            android:ellipsize="end"
	            android:textSize="12sp"/>	        		    
		</LinearLayout>
        <TextView
            android:id="@+id/imageView1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/close_arrows" />
    </LinearLayout>
	<include layout="@layout/hlines"/>
</LinearLayout>