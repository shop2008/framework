<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:background="@color/page_background_color"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#ffffff"
        android:padding="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/trading0" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="每个交易日可创建一个参赛模拟盘，正收益即可获得实盘积分奖励！" 
                android:layout_marginLeft="6dp"/>

            
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实盘积分可兑换实盘资金操作权，满1万积分即可申请实盘！"
            android:textColor="@color/black"
            android:textSize="14sp" 
            android:layout_marginTop="8dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#f1e76c"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="初始金额："
	            android:textColor="@color/black"
	            android:textSize="14sp" />
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="--"
	            bind:field="virtualApplyAmount"
	            android:textColor="@color/black"
	            android:textSize="14sp" />
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="元(模拟)"
	            android:textColor="@color/black"
	            android:textSize="14sp" />	        	        
        </LinearLayout>

		<LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        <TextView
		        android:id="@+id/textView1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="中止止损：" 
		        android:textSize="14sp"
		        android:textColor="@color/black"
		        android:layout_marginTop="8dp"/>
	        <TextView
		        android:id="@+id/textView1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="-" 
		        android:textSize="14sp"
		        android:textColor="@color/black"
		        android:layout_marginTop="8dp"/>
		    <TextView
		        android:id="@+id/textView2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        bind:field="capitalRate"
		        android:text="--" 
		        android:textSize="14sp"
		        android:textColor="@color/black"
		        android:layout_marginTop="8dp" />
    	</LinearLayout>        
    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="创建" 
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/blue_button_style"
        android:layout_marginTop="12dp"
        bind:field="submitBtnStatus1"
        bind:on_Click="handleCreateTrading@BuyStockClickedDecorator" 
        />
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" 
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        >

        <CheckBox
            android:id="@+id/cb_agree_or_not"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_cb_read_rule_or_not"
            android:button="@null"
            android:checked="true" 
            bind:field="isChecked1"
            bind:on_Click="isCheckBoxChecked1"
            />

        <TextView
            android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_have_read_rule_text"
            android:textSize="14sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_trade_rule_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《模拟盘交易规则》"
            bind:field="*"
            android:enabled="true"
            android:clickable="true"
            bind:on_Click="showTradingRulePage"
            android:textSize="14sp"
            android:textColor="#0183ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_right_quotes"
            android:textColor="@color/white" 
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
	        <include layout="@layout/hlines"/>
        </LinearLayout>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易规则"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"/>
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        	<include layout="@layout/hlines"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
		<LinearLayout 
		    android:layout_height="wrap_content"
		    android:layout_width="fill_parent"
		    android:layout_marginBottom="6dp">
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/white"
	            android:text="买卖标的：" />
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/white"
	            android:text="沪深A股,除创业板、ST、*ST板块以及当日风险股票。" />		    
		</LinearLayout>
		<LinearLayout 
		    android:layout_height="wrap_content"
		    android:layout_width="fill_parent"
		    android:layout_marginBottom="6dp">
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/white"
	            android:text="操作时长：" />
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/white"
	            android:text="截至下一交易日14：54：59" />		    
		</LinearLayout>
        <LinearLayout 
		    android:layout_height="wrap_content"
		    android:layout_width="fill_parent"
		    android:layout_marginBottom="6dp">
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/white"
	            android:text="积分奖励：" />
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/white"
	            android:text="正收益即可获实盘积分。" />
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="#0183ff"
	            android:text="奖励详情" />		    
		</LinearLayout>
    </LinearLayout>
    
</LinearLayout>
