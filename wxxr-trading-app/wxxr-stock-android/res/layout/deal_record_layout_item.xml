<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    xmlns:bind="http://wxxr.com.cn/binding"
    android:background="@drawable/listview_selected_item1"
    
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        
	    <LinearLayout
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center_vertical"
	        android:orientation="vertical" >
	
	        <!-- 月 和 日 -->
	        <TextView
	            android:id="@+id/tv_deal_record_m_d"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center" 
	            android:text="--"
	            bind:field="date"
	            android:textColor="@color/white"
	            android:textSize="14sp"/>
	        <!-- 时 分 秒 -->
	        <TextView
	            android:id="@+id/tv_deal_record_h_m_s"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center" 
	            android:text="--"
	            bind:field="time"
	            android:textColor="@color/white"
	            android:textSize="12sp"/>
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center_vertical"
	        android:orientation="vertical" >
	
	        <!-- 名称 -->
	        <TextView
	            android:id="@+id/tv_deal_record_name"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center" 
	            android:text="--"
	            bind:field="market"
	            android:textColor="@color/white"
	            android:textSize="14sp"/>
	        <!-- 代码 -->
	
	        <TextView
	            android:id="@+id/tv_deal_record_code"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center" 
	            android:text="--"
	            bind:field="code"
	            android:textColor="@color/white"
	            android:textSize="12sp"/>
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center_vertical"
	        android:orientation="vertical" >
	
	        <!-- 方向 -->
	
	        <TextView
	            android:id="@+id/tv_deal_record_direction"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center" 
	            android:text="--"
	            bind:field="describe"
	            android:textSize="14sp"/>
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center_vertical"
	        android:orientation="vertical" >
	
	        <!-- 价格 -->
	
	        <TextView
	            android:id="@+id/tv_deal_record_price"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="--"
	            bind:field="price"
	            android:textColor="@color/white"
	            android:gravity="center"
	            android:textSize="14sp"/>
	        <!-- 数量 -->
	
	        <TextView
	            android:id="@+id/tv_deal_record_amount"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text="--" 
	            bind:field="vol"
	            android:textColor="@color/white"
	            android:textSize="12sp">
	        </TextView>
	    </LinearLayout>
    </LinearLayout>
	<View android:layout_width="fill_parent"
	    android:layout_height="0.5dp"
	    android:background="#303030"/>	
</LinearLayout>