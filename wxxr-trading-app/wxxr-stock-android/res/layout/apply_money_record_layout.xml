<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0C0306" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2E2E30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#222325"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="时间"
            android:textColor="#989E9E"
            android:textSize="15sp" />

        <include layout="@layout/divider_vertical_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="金额"
            android:textColor="#989E9E"
            android:textSize="15sp" />

        <include layout="@layout/divider_vertical_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="状态"
            android:textColor="#989E9E"
            android:textSize="15sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/page_background_color" >

        <com.wxxr.mobile.stock.client.widget.PullToRefreshView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            bind:field="refreshView"
            bind:on_PullRefresh="handleRefresh" >

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:fadingEdge="none"
                android:scrollbars="none"
                bind:field="applyMoneyRecords@StockViewDecorator"
                bind:itemViewId="ApplyMoneyRecordItemView" 
                bind:updatingViewId="resourceId:id/progress"
            	bind:updateFaieldId="resourceId:id/failed"
            	bind:updateAllId="resourceId:id/all"
                />
        </com.wxxr.mobile.stock.client.widget.PullToRefreshView>
        
        <include layout="@layout/stock_loading_progress_layout"/>
    </FrameLayout>

</LinearLayout>