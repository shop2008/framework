<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dip"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="horizontal" 
        android:id="@id/ll_szsz"
        >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/widget_bar_bg_n"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="上证指数"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@drawable/divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@id/tv_szzs_up_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19288.8"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@id/iv_szzs_up_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:src="@drawable/ic_down" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@id/tv_szzs_up_down_what"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-23.2" />

                    <TextView
                        android:id="@id/tv_szzs_up_down_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="23.2%" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@drawable/abs_divider_light" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/widget_bar_bg_n"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="深证成指"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@drawable/divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@id/tv_szcz_up_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19288.8"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@id/iv_szcz_up_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:src="@drawable/ic_down" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@id/tv_szcz_up_down_what"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-23.2" />

                    <TextView
                        android:id="@id/tv_szcz_up_down_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="23.2%" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout 
        
        android:id="@id/ll_kind_sort"
        android:layout_below="@id/ll_szsz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dip"
       
        >
        <Button 
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:text="股票名称"
            />
        
        <Button 
            android:id="@+id/btn_latest_price"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="最新价格"
            />
        
        <Button 
            android:id="@+id/btn_up_down_rate"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="涨跌幅"
            android:drawableRight="@drawable/ic_down"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_below="@id/ll_kind_sort"
        android:layout_height="match_parent" 
        android:layout_margin="5dip"
        >

        <com.wxxr.stock.trading.ui.widget.PullToRefreshListView
            android:id="@id/lv_price_center_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >
        </com.wxxr.stock.trading.ui.widget.PullToRefreshListView>
    </FrameLayout>

    
    <include 
        layout="@layout/layout_loading"
        />
</RelativeLayout>