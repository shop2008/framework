<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background_color"
    android:orientation="vertical" >
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/sell_left_date_background"
         android:gravity="center"
         bind:field="dateTitle" >

         <TextView
             android:id="@+id/textView1"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="center"
             android:text="--"
             android:textColor="@color/white"
             android:textSize="15sp"
             bind:field="buyDay" />

         <TextView
             android:id="@+id/textView2"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="center"
             android:text="--"
             android:textColor="@color/white"
             android:textSize="15sp"
             bind:field="sellDay" />
     </LinearLayout>
    <LinearLayout
        android:id="@+id/message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_layout"
        android:layout_margin="2dp"
        android:background="@drawable/bu_message_radius"
        android:gravity="center"
        bind:field="messageLayout" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            bind:field="message" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/search_2_btn"
            bind:field="closeBtn"
            bind:on_Click="handleCloseBtnClick" />
   </LinearLayout>           
	<com.wxxr.mobile.stock.client.widget.PullToRefreshView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    bind:field="acctRefreshView"
	    bind:on_TopRefresh="handleTopRefresh"
	    android:layout_weight="1" >
		<ListView
		    android:id="@+id/listView1"
		    style="@style/mListView"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    bind:field="stockTradingOrder"
		    bind:headerViewId="SellTradingAccountHeaderView"
		    bind:itemViewId="SellTradingItemView"
		    bind:on_ItemClick="sellStockItemClick" >
		</ListView>
    </com.wxxr.mobile.stock.client.widget.PullToRefreshView>
    <include layout="@layout/sell_button_layout" />
</LinearLayout>