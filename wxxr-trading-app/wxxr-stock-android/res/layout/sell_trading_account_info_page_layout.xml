<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background_color">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="50dp">
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:gravity="center"
	        android:background="@drawable/date_bj"
	        >
	
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="--" 
	            android:layout_weight="1"
	            android:gravity="center"
	            android:textColor="@color/white"
	            android:textSize="15sp"
	            bind:field="buyDay"
	            />
	
	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="--" 
	            bind:field="sellDay"
	            android:textColor="@color/white"
	            android:textSize="15sp"/>
	
	    </LinearLayout>
	
		<com.wxxr.mobile.stock.client.widget.PullToRefreshView
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_above="@id/buy_btn"
		    android:layout_below="@id/date_layout"
		    android:orientation="vertical"
		    bind:field="acctRefreshView"
		    bind:on_TopRefresh="handleTopRefresh" >
		
			 <ScrollView
			     android:layout_width="match_parent"
			     android:layout_height="match_parent" >
			     <LinearLayout android:layout_width="fill_parent"
			         android:layout_height="wrap_content"
			         android:orientation="vertical">
				    <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content" 
				        android:background="@drawable/title_background"
				        android:gravity="center"
				        android:paddingBottom="0.5dp">
				
				        <TextView
				            android:id="@+id/textView3"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="申请资金" 
				            android:layout_weight="1"
				            android:textColor="@color/white"
				            android:textSize="15sp"
				            android:gravity="center"
				            />
				        <ImageView
				            android:layout_width="wrap_content"
				            android:layout_height="match_parent"
				            android:src="@drawable/title_line"
				            />
				        <TextView
				            android:id="@+id/textView3"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="可用资金" 
				            android:layout_weight="1"
				            android:textColor="@color/white"
				            android:textSize="15sp"
				            android:gravity="center"
				            />
				        <ImageView
				            android:layout_width="wrap_content"
				            android:layout_height="match_parent"
				            android:src="@drawable/title_line"
				            />
				        <TextView
				            android:id="@+id/textView3"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="总盈亏率" 
				            android:layout_weight="1"
				            android:textColor="@color/white"
				            android:textSize="15sp"
				            android:gravity="center"
				            />
				        <ImageView
				            android:layout_width="wrap_content"
				            android:layout_height="match_parent"
				            android:src="@drawable/title_line"
				            />
				        <TextView
				            android:id="@+id/textView3"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="盈亏总额" 
				            android:layout_weight="1"
				            android:textColor="@color/white"
				            android:textSize="15sp"
				            android:gravity="center"
				            />
				    </LinearLayout>			         
				    <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:orientation="horizontal" 
				        bind:field="*"
                    	bind:on_Click="handleStockClick">
				
				        <TextView
				            android:id="@+id/textView4"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="--" 
				            android:textColor="@color/white"
				            android:textSize="14sp"
				            android:gravity="center"
				            android:padding="8dp"
				            bind:field="applyFee"
				            android:layout_weight="1"/>
				
				        <TextView
				            android:id="@+id/textView5"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="--" 
				            android:textColor="@color/white"
				            android:textSize="14sp"
				            android:gravity="center"
				            android:padding="8dp"
				            bind:field="avalibleFee"
				            android:layout_weight="1"/>
				
				        <TextView
				            android:id="@+id/textView6"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="--" 
				            android:textColor="@color/white"
				            android:textSize="14sp"
				            android:gravity="center"
				            android:padding="8dp"
				            bind:field="gainRate"
				            android:layout_weight="1"/>
				
				        <TextView
				            android:id="@+id/textView7"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="--" 
				            android:textColor="@color/white"
				            android:textSize="14sp"
				            android:gravity="center"
				            android:padding="8dp"
				            bind:field="totalGain"
				            android:layout_weight="1"/>
				        
				    </LinearLayout>	
				    <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content" 
				        android:background="@drawable/title_background"
				        android:gravity="center"
				        android:paddingBottom="0.5dp">
				
				        <TextView
				            android:id="@+id/textView3"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="名称代码" 
				            android:layout_weight="1"
				            android:textColor="@color/white"
				            android:textSize="15sp"
				            android:gravity="center"
				            />
				        <ImageView
				            android:layout_width="wrap_content"
				            android:layout_height="match_parent"
				            android:src="@drawable/title_line"
				            />
				        <TextView
				            android:id="@+id/textView3"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="最新价" 
				            android:layout_weight="1"
				            android:textColor="@color/white"
				            android:textSize="15sp"
				            android:gravity="center"
				            />
				        <ImageView
				            android:layout_width="wrap_content"
				            android:layout_height="match_parent"
				            android:src="@drawable/title_line"
				            />
				        <TextView
				            android:id="@+id/textView3"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="价量" 
				            android:layout_weight="1"
				            android:textColor="@color/white"
				            android:textSize="15sp"
				            android:gravity="center"
				            />
				        <ImageView
				            android:layout_width="wrap_content"
				            android:layout_height="match_parent"
				            android:src="@drawable/title_line"
				            />
				        <TextView
				            android:id="@+id/textView3"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="盈亏" 
				            android:layout_weight="1"
				            android:textColor="@color/white"
				            android:textSize="15sp"
				            android:gravity="center"
				            />
				    </LinearLayout>
				
				    <com.wxxr.mobile.stock.client.widget.AutoHeightListView
				        android:id="@+id/listView1"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content" 
				        style="@style/mListView"
				        bind:field="stockTradingOrder"
				        bind:itemViewId="sellTradingStockOrder">
				    </com.wxxr.mobile.stock.client.widget.AutoHeightListView>				    
		    	    <TextView android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:text="未买入股票"
				        android:textColor="@color/white"
				        android:textSize="15sp"
				        android:gravity="center"
				        android:visibility="gone"
				        bind:field="isEmpty"
				        />		         
			     </LinearLayout>
			</ScrollView>
		</com.wxxr.mobile.stock.client.widget.PullToRefreshView>	    
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="10dp"
         >

        <Button
            android:id="@+id/button1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="卖出" 
            android:background="@drawable/blue_btn_back"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            bind:filed="isEmpty"
            bind:on_Click="sellTradingAction"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="清仓" 
            android:background="@drawable/blue_btn_back"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            bind:filed="isEmpty"
            bind:on_Click="cleanTradingAction"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>
    
</RelativeLayout>
