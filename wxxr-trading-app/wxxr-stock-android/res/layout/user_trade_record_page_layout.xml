<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bar_bj"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <TextView
            android:id="@id/tv_title_content"
            style="@style/style_title_text"
            android:text="@string/tv_title_trade_record" />

        <ImageButton
            android:id="@id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/back_button"
            bind:field="*"
            bind:on_Click="back" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            bind:field="recordNotNullVisible" 
            >

            <RadioGroup
                android:id="@id/rg_game_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <RadioButton
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/widget_bar_bg"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:text="@string/tab_success_operation_text"
                    bind:field="sucRecordBtn"
                    bind:on_Click="showSucRecords" 
                    />

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/abs_divider_hor_btn" />

                <RadioButton
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/widget_bar_bg"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:text="@string/tab_whole_operation_text"
                    bind:field="allRecordBtn"
                    bind:on_Click="showAllRecords" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_horizontal"
                    android:gravity="center"
                    android:text="@string/label_stock"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/abs_divider_hor_btn" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_horizontal"
                    android:gravity="center"
                    android:text="@string/label_amount"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/abs_divider_hor_btn" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_horizontal"
                    android:gravity="center"
                    android:text="@string/label_profit_loss"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/abs_divider_hor_btn" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_horizontal"
                    android:gravity="center"
                    android:text="@string/label_date"
                    android:textSize="15sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.wxxr.mobile.stock.client.widget.PullToRefreshListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    bind:field="successRecordsList"
                    bind:itemViewId="tradeRecordItemView"
                    bind:on_ItemClick="sucRecordItemClicked"
                    bind:on_BottomRefresh="handleSucBottomRefresh"
                    bind:on_TopRefresh="handleSucTopRefresh" >
                </com.wxxr.mobile.stock.client.widget.PullToRefreshListView>

                <com.wxxr.mobile.stock.client.widget.PullToRefreshListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    bind:field="allRecordsList"
                    bind:itemViewId="tradeRecordItemView"
                    bind:on_ItemClick="allRecordItemClicked"
                    bind:on_BottomRefresh="handleAllBottomRefresh"
                    bind:on_TopRefresh="handleAllTopRefresh" >
                </com.wxxr.mobile.stock.client.widget.PullToRefreshListView>
            </FrameLayout>
        </LinearLayout>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            bind:field="recordNullVisible"
            android:text="@string/record_null_text"
            />
    </FrameLayout>

</LinearLayout>