<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding" 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <com.wxxr.stock.trading.ui.widget.PullToRefreshView
        android:id="@id/refresh_view_earn_money_rank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        bind:field="earnRankList" 
        bind:itemViewId="earnRankListItemView"
        android:orientation="vertical" >

        <ExpandableListView
            android:id="@id/elv_earn_money_rank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:cacheColorHint="@android:color/transparent" >
        </ExpandableListView>
    </com.wxxr.stock.trading.ui.widget.PullToRefreshView>

    <include layout="@layout/loading_layout" />
</RelativeLayout>