<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/page_background_color"
    android:padding="8dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#ffffff"
    	android:padding="8dp"
    	android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/trading11" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="每日可创建多个挑战交易盘，T日买入股票，T+1日则必须卖出股票" 
            android:layout_marginLeft="6dp"/>
    </LinearLayout>
	<!-- bind:field="money"
        bind:itemViewId="challengeTradeMoneyItem"
        bind:on_TextChanged="moneyTextChanged" -->
	<com.wxxr.mobile.stock.client.widget.TextSpinnerView
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:textSize="14sp"
        android:paddingLeft="8dp"
        android:clickable="true"
        android:enabled="true"
        android:hint="申请金额"
        bind:field="money"
        bind:itemViewId="challengeTradeMoneyItem"
        bind:on_TextChanged="moneyTextChanged"
        android:textColor="@color/black"
        android:background="#ffffff"
        android:drawableRight="@drawable/input_arrows_new"
        android:drawablePadding="0dp"
        android:layout_marginBottom="8dp"/>
	
	<com.wxxr.mobile.stock.client.widget.TextSpinnerView
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:textSize="14sp"
        android:paddingLeft="8dp"
        android:clickable="true"
        android:enabled="true"
        android:hint="申请金额"
        bind:field="voucherMoney"
        bind:itemViewId="challengeTradeMoneyItem"
        bind:on_TextChanged="VoucherMoneyTextChanged"
        android:textColor="@color/black"
        android:background="#ffffff"
        android:visibility="gone"
        android:drawableRight="@drawable/inpunt_arrows"
        android:drawablePadding="0dp"
        android:layout_marginBottom="8dp"/>
	
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="8dp">
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:paddingLeft="12dp"
	        android:paddingTop="8dp"
	        android:paddingRight="8dp"
	        android:paddingBottom="8dp"
	        android:layout_marginRight="4dp"
	        android:gravity="center_vertical"
	        bind:field="deposit_layout_01"
	        bind:on_Click="RateClick"
	        android:background="@drawable/radion_button_style">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/radion_button"
	            bind:field="deposit_radio_01"/>
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:paddingLeft="6dp"
	            android:layout_gravity="center_vertical">
				<LinearLayout android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical">
				    <TextView
		                android:id="@+id/textView2"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="--"
		                bind:field="deposit_01"
		                android:textColor="@color/radion_button_color"/>
		            <TextView
		                android:id="@+id/textView2"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="保证金" 
		                bind:field="deposit_txt_01"
		                android:textColor="@color/radion_button_color"/>
				</LinearLayout>

	            <LinearLayout android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical">
		            <TextView
		                android:id="@+id/textView2"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="-" 
		                bind:field="loss_txt_01"
		                android:textColor="@color/radion_button_color"/>
				    <TextView
		                android:id="@+id/textView2"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="--"
		                bind:field="rate_01"
		                android:textColor="@color/radion_button_color"/>
		            <TextView
		                android:id="@+id/textView2"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="止损" 
		                bind:field="rate_txt_01"
		                android:textColor="@color/radion_button_color"/>
				</LinearLayout>
	            
	        </LinearLayout>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:layout_weight="1"
	        bind:field="voucher_layout_02"
	        bind:on_Click="VoucherRateClick"
	        android:layout_marginLeft="4dp"
	        android:paddingLeft="12dp"
	        android:paddingTop="8dp"
	        android:paddingRight="8dp"
	        android:paddingBottom="8dp"
	        android:background="@drawable/radion_button_style">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/radion_button"
	            bind:field="voucher_radio_02"/>
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:paddingLeft="6dp"
	            android:layout_gravity="center_vertical"
	            android:orientation="vertical">
	            <TextView
	                android:id="@+id/textView2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="积分创建" 
	                bind:field="voucher_txt_02"
	                android:textColor="@color/radion_button_color"/>
	            <LinearLayout android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical">
		            <TextView
		                android:id="@+id/textView2"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="-" 
		                bind:field="loss_txt_02"
		                android:textColor="@color/radion_button_color"/>
				    <TextView
		                android:id="@+id/textView2"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="--"
		                bind:field="voucherRate_02"
		                android:textColor="@color/radion_button_color"/>
		            <TextView
		                android:id="@+id/textView2"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="止损" 
		                bind:field="voucherRate_txt_02"
		                android:textColor="@color/radion_button_color"/>
				</LinearLayout>
	        </LinearLayout>
	    </LinearLayout>
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#f1e76c"
    	android:padding="8dp"
    	android:orientation="vertical"
    	android:layout_marginBottom="8dp"
        android:gravity="center_vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_marginBottom="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易综合费："
                android:textColor="@color/black" 
                android:textSize="14sp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/tv_composite_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00元"
                android:textSize="14sp"
                bind:field="originalFeeValue"
                android:layout_alignParentRight="true"
                android:textColor="@color/black" />
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp" 
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="冻结保证金："
                android:layout_alignParentLeft="true"
                android:textColor="@color/black" 
                android:textSize="14sp"
                />
			<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="冻结积分："
                android:layout_alignParentLeft="true"
                android:textColor="@color/black" 
                android:textSize="14sp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_assure_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0元"
                android:textSize="14sp"
                bind:field="dj_money"
                android:layout_alignParentRight="true"
                android:textColor="@color/black" />
        </RelativeLayout>
        
  	</LinearLayout>    

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="股市有风险 投资需谨慎"
        android:textColor="@color/red" 
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>
    
    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="创建" 
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/red_button_style"
        bind:field="submitBtnStatus1"
        bind:on_Click="handleCreateTrading@BuyStockClickedDecorator" 
        />    
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" 
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        >

        <CheckBox
            android:id="@+id/cb_agree_or_not"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_cb_read_rule_or_not"
            android:button="@null"
            android:checked="true" 
            bind:field="isChecked1"
            bind:on_Click="isCheckBoxChecked1"
            />

        <TextView
            android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_have_read_rule_text"
            android:textColor="@color/white" 
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_trade_rule_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:enabled="true"
            android:text="《挑战盘交易规则》"
            android:textColor="@color/red"
            android:textSize="14sp"
            bind:field="*"
		    bind:on_Click="showTradingRulePage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_right_quotes" 
            android:textSize="14sp"/>
    </LinearLayout>    
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
	        <include layout="@layout/hlines"/>
        </LinearLayout>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易规则"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"/>
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        	<include layout="@layout/hlines"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
		<LinearLayout 
		    android:layout_height="wrap_content"
		    android:layout_width="fill_parent"
		    android:layout_marginBottom="6dp">
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/white"
	            android:text="买卖标的：" />
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/white"
	            android:text="沪深A股,除创业板、ST、*ST板块以及当日风险股票。" />		    
		</LinearLayout>
		<LinearLayout 
		    android:layout_height="wrap_content"
		    android:layout_width="fill_parent"
		    android:layout_marginBottom="6dp">
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/white"
	            android:text="操作时长：" />
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/white"
	            android:text="截至下一交易日14：54：59" />		    
		</LinearLayout>
        <LinearLayout 
		    android:layout_height="wrap_content"
		    android:layout_width="fill_parent"
		    android:layout_marginBottom="6dp">
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/white"
	            android:text="收益分配：" />
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/white"
	            android:text="操盘利润80%归玩家所有" />	    
		</LinearLayout>
    </LinearLayout>    
</LinearLayout>
