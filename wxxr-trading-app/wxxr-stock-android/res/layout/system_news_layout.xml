<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.wxxr.mobile.stock.client.widget.PullToRefreshView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/page_background_color"
        android:orientation="vertical"
        bind:field="refreshView"
        bind:on_PullRefresh="handleRefresh" >

        <com.wxxr.mobile.stock.client.widget.PinnedHeaderListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:choiceMode="singleChoice"
            style="@style/mListView"
            bind:field="systemNewsInfos@StockViewDecorator"
            bind:itemViewId="SystemNewsItemViewSelector"
            bind:on_PinItemClick="handleItemClick" 
            bind:updatingViewId="resourceId:id/progress"
            bind:updateFaieldId="resourceId:id/failed"
            bind:updateAllId="resourceId:id/all"
            />
    </com.wxxr.mobile.stock.client.widget.PullToRefreshView>

    <include layout="@layout/stock_loading_progress_layout"/>
</FrameLayout>