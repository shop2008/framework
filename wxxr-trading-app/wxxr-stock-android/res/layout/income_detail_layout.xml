<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/black"
    >

    <com.wxxr.mobile.stock.client.widget.PullToRefreshListView
            android:id="@+id/listView1"
            android:cacheColorHint="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            bind:field="incomeDetails"
            android:listSelector="@color/gray"
            bind:itemViewId="incomeDetailsItemView"
            bind:on_TopRefresh="handleTopRefresh"
            bind:on_BottomRefresh="handleBottomRefresh" 
            >
        </com.wxxr.mobile.stock.client.widget.PullToRefreshListView>

</LinearLayout>