<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_background_color">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1b1c1e" >

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            bind:field="*"
            bind:on_Click="handleSHClick">
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上证指数"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
            	android:paddingBottom="4dp"/>
			<LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
            	android:paddingBottom="8dp">
                <LinearLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout 
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="--"
	                        android:textSize="18sp"
	                        android:textColor="@color/white"
	                        bind:field="sh_newprice"
	                        android:layout_marginRight="4dp"/>
		                <TextView 
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:background="@drawable/risefallrate_stype"
		                    bind:field="shType"
		                    />	                    
                    </LinearLayout>
                    <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="--"
	                        android:textSize="12sp"
	                        bind:field="sh_change"
	                        android:textColor="@color/white"/>
                        <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="--"
	                        android:textSize="12sp"
	                        android:layout_marginLeft="4dp"
	                        android:textColor="@color/white"
	                        bind:field="sh_risefallrate"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>            
        </LinearLayout>
        
		<View android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <View android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="#2F2E30"/>    
                
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            bind:field="*"
            bind:on_Click="handleSZClick">
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="深证成指"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:paddingTop="8dp"
            	android:paddingBottom="4dp"/>
			<LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
            	android:paddingBottom="8dp">
                <LinearLayout 
                    android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="vertical"
	                android:gravity="center"
	                >
                    <LinearLayout 
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
	                	<TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="--"
	                        android:textSize="18sp"
	                        android:layout_marginRight="4dp"
	                        android:textColor="@color/white"
	                        bind:field="sz_newprice"/>
		                <TextView 
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:background="@drawable/risefallrate_stype"
		                    bind:field="szType"
		                    />	                	
	                	
	                </LinearLayout>
                    <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="--"
	                        android:textSize="12sp"
	                        bind:field="sz_change"
	                        android:textColor="@color/white"/>
                        <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="--"
	                        bind:field="sz_risefallrate"
	                        android:textSize="12sp"
	                        android:layout_marginLeft="4dp"
	                        android:textColor="@color/white"/>
                    </LinearLayout>
            	</LinearLayout>
            </LinearLayout>            
            
        </LinearLayout>
        <View android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <View android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="#2F2E30"/>
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            bind:field="*"
            bind:on_Click="handleZXClick"
            android:orientation="vertical"
            >
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="中小板指"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
            	android:paddingBottom="4dp"/>
			<LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
            	android:paddingBottom="8dp">
                <LinearLayout 
                    android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="vertical"
	                android:gravity="center"
	                >
                    <LinearLayout 
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
	                	<TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="--"
	                        android:textSize="18sp"
	                        android:layout_marginRight="4dp"
	                        android:textColor="@color/white"
	                        bind:field="zx_newprice"/>
		                <TextView 
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:background="@drawable/risefallrate_stype"
		                    bind:field="zxType"
		                    />	                	
	                </LinearLayout>	
                    <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="--"
	                        android:textSize="12sp"
	                        bind:field="zx_change"
	                        android:textColor="@color/white"/>
                        <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="--"
	                        bind:field="zx_risefallrate"
	                        android:textSize="12sp"
	                        android:layout_marginLeft="4dp"
	                        android:textColor="@color/white"/>
                    </LinearLayout>
            	</LinearLayout>
            </LinearLayout>			            
        </LinearLayout>        
    </LinearLayout>
    <View android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#2F2E30"/>    
    <LinearLayout 
        
        android:id="@id/ll_kind_sort"
        android:layout_below="@id/ll_szsz"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#222325"
        >
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="股票"
            android:textColor="#989e9e"
            android:gravity="center"
            android:textSize="15sp"
            />
		<View android:layout_width="0.5dp"
            android:layout_height="32dp"
            android:background="#000000"/>
        <View android:layout_width="0.5dp"
            android:layout_height="32dp"
            android:background="#2F2E30"/>  
        
        <LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="32dp"
		    android:layout_weight="1"
		    android:gravity="center"
		    bind:field="*"
		    bind:on_Click="orderByNewPrice"
		    >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="最新价"
		        android:textSize="15sp"
		        android:textColor="#989e9e" 
		        />
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/orderby_attrows"
		        android:layout_marginLeft="4dp"
		        android:enabled="true"
		        bind:field="isNewPrice"
		        android:visibility="gone"
		        />
		</LinearLayout>
		<View android:layout_width="0.5dp"
            android:layout_height="32dp"
            android:background="#000000"/>
        <View android:layout_width="0.5dp"
            android:layout_height="32dp"
            android:background="#2F2E30"/>  
		
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="32dp"
		    android:layout_weight="1"
		    android:gravity="center"
		    bind:field="*"
		    bind:on_Click="orderByRisefallrate">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="涨跌幅"
		        android:textSize="15sp"
		        android:textColor="#989e9e" 
		        />
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/orderby_attrows"
		        android:layout_marginLeft="4dp"
		        android:enabled="true"
		        bind:field="isRisefallrate"
		        />
		</LinearLayout>

    </LinearLayout>
	<View android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#000000"/>
     <FrameLayout 
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1">
			<com.wxxr.mobile.stock.client.widget.PullToRefreshView
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="vertical"
		        bind:field="acctRefreshView"
		        bind:on_PullRefresh="handleRefresh">
		        <ListView
		            android:id="@+id/listView1"
		            style="@style/mListView"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            bind:field="stockInfos"
		            bind:itemViewId="infoCenterItemView"
		            bind:on_ItemClick="gotoPageItemClick" />
		    </com.wxxr.mobile.stock.client.widget.PullToRefreshView>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical" 
             android:gravity="center"
             android:visibility="gone"
             bind:field="addStockField"
             bind:on_Click="addStockClick"
             android:layout_marginTop="30dp">

             <TextView
                 android:id="@+id/textView1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="尚未添加自选股" 
                 android:textColor="@color/white"
                 android:textSize="18sp"/>
		    
	         <ImageView
	             android:id="@+id/imageView1"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_marginTop="8dp"
	             android:src="@drawable/add_price_center_info" />
         </LinearLayout>

         
     </FrameLayout>
</LinearLayout>