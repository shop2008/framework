<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_sp_wheel_kb"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/layout_bg"
    android:orientation="vertical"
    android:visibility="gone" >

    <!-- 描述 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按涨幅达" />

        <TextView
            android:id="@+id/tv_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:id="@+id/tv_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".00%" />

        <TextView
            android:id="@+id/tv_stock_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="()" />

        <TextView
            android:id="@+id/tv_buy_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="的价格买入" />
    </LinearLayout>

    <!-- 滚动 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:padding="12dp" >

        <com.wxxr.mobile.stock.client.widget.wheel.WheelView
            android:id="@+id/wv_left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.wxxr.mobile.stock.client.widget.wheel.WheelView
            android:id="@+id/wv_middle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.wxxr.mobile.stock.client.widget.wheel.WheelView
            android:id="@+id/wv_right"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- 123、完成按键 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center" >

        <Button
            android:id="@+id/bt_123"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/num_keyboard_light_selector"
            android:text="123"
            android:layout_marginRight="5dip"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_finish"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/num_keyboard_light_selector"
            android:text="完成"
            android:layout_marginLeft="5dip"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>