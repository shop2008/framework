<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_selected_item1"
    >

    
    <LinearLayout
        android:id="@+id/ll_real_score" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        >
        <com.wxxr.mobile.stock.client.widget.MarqueeText 
            android:id="@+id/tv_integral_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="充入现金"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            bind:field="scoreCatagory"
            />
        <TextView 
            android:id="@+id/tv_integral_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="2012-11-11"
            bind:field="gainDate"
            />
    </LinearLayout>
    
    <TextView 
        android:id="@+id/tv_integral_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginRight="5dp"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        bind:field="gainNum"
        />
    <LinearLayout 
        android:layout_below="@id/ll_real_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <include layout="@layout/hlines" />
    </LinearLayout>
</RelativeLayout>