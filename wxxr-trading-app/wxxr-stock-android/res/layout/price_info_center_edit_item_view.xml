<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/listview_selected_item1">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical" 
        android:id="@+id/stock_item_layout"
        android:padding="4dp">
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <RadioButton
                android:id="@+id/selected_radio"
                android:layout_width="wrap_content"
                android:focusable="false"
                android:clickable="false"
                android:button="@drawable/edit_button"
                android:layout_height="wrap_content" />

		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_weight="1" 
		        android:paddingLeft="8dp">
		        <TextView 
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text="--"
		        	android:id="@+id/stock_name"
		        	android:gravity="center"
		        	android:textSize="14sp"
		        	android:textColor="@color/white"
		            />

		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center"
		            android:text="--"
		            android:id="@+id/stock_code"
		            android:textSize="12sp"
		            android:textColor="@color/gray" />        
		    </LinearLayout>            
        </LinearLayout>
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" 
	        android:layout_weight="1"
	        android:gravity="center">
	
			<ImageView
			    android:id="@id/top_drag_handle"
			    android:layout_width="20dp"
			    android:layout_height="wrap_content"
			    android:src="@drawable/top_icon" />
	
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/drag_list_item_image"
	        android:layout_weight="1" 
	        android:gravity="center">
	
	        <ImageView
	            android:layout_width="20dp"
	            android:layout_height="wrap_content"
	            android:id="@id/drag_handle"
	            android:src="@drawable/move_icon" 
	            android:layout_gravity="center"
	            />
	
	        <TextView
	            android:id="@id/click_remove"
	            android:layout_marginLeft="6dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/white"
	            android:textSize="14sp"
	            android:text="删除" 
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingTop="4dp"
	            android:paddingBottom="4dp"
	            android:background="#ff2100"
	            android:layout_gravity="center"/>
			
	    </LinearLayout>
    </LinearLayout>
    <include layout="@layout/hlines"/>
</LinearLayout >
