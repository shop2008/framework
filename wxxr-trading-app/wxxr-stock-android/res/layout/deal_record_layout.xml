			<View android:layout_width="fill_parent"
			      android:layout_height="0.5dp"
			      android:background="#000000"/>
		    <com.wxxr.mobile.stock.client.widget.imageViewPager 
			    android:layout_width="fill_parent"
			    android:layout_height="140dp"
			    bind:field="imgData"
			    android:background="@color/black">
			</com.wxxr.mobile.stock.client.widget.imageViewPager>
			<View android:layout_width="fill_parent"
		          android:layout_height="0.5dp"
		          android:background="#2F2E30"/>			
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="#222325"
		        >
		        <TextView 
		            android:layout_width="fill_parent"
		            android:layout_height="32dp"
		            android:layout_weight="1"
		            android:enabled="false"
		            android:text="时间"
		            android:textColor="#989e9e"
		            android:gravity="center"
		            android:textSize="15sp"
		            />
				<View android:layout_width="0.5dp"
		            android:layout_height="32dp"
		            android:background="#000000"/>
		        <View android:layout_width="0.5dp"
		            android:layout_height="32dp"
		            android:background="#2F2E30"/>
		        <TextView 
		            android:layout_width="fill_parent"
		            android:layout_height="32dp"
		            android:layout_weight="1"
		            android:enabled="false"
		            android:text="股票"
		            android:textColor="#989e9e"
		            android:gravity="center"
		            android:textSize="15sp"
		            />
				<View android:layout_width="0.5dp"
		            android:layout_height="32dp"
		            android:background="#000000"/>
		        <View android:layout_width="0.5dp"
		            android:layout_height="32dp"
		            android:background="#2F2E30"/>
		        <TextView 
		            android:layout_width="fill_parent"
		            android:layout_height="32dp"
		            android:layout_weight="1"
		            android:enabled="false"
		            android:text="方向"
		            android:textColor="#989e9e"
		            android:gravity="center"
		            android:textSize="15sp"
		            />
				<View android:layout_width="0.5dp"
		            android:layout_height="32dp"
		            android:background="#000000"/>
		        <View android:layout_width="0.5dp"
		            android:layout_height="32dp"
		            android:background="#2F2E30"/>
		        <TextView 
		            android:layout_width="fill_parent"
		            android:layout_height="32dp"
		            android:layout_weight="1"
		            android:enabled="false"
		            android:text="价量"
		            android:textColor="#989e9e"
		            android:gravity="center"
		            android:textSize="15sp"
		            />
		    </LinearLayout>
			<View android:layout_width="fill_parent"
			      android:layout_height="0.5dp"
			      android:background="#000000"/>		    
		    <com.wxxr.mobile.stock.client.widget.AutoHeightListView
		        android:id="@+id/lv_deal_record"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        style="@style/mListView"
		        bind:itemViewId="TradingRecordDetailItemView"
		        bind:field="tradingRecords"
		        bind:on_ScrollChange="onScrollChange"
		        bind:on_ItemClick="StockQuotationAction">
		    </com.wxxr.mobile.stock.client.widget.AutoHeightListView>
        </LinearLayout>
   </com.wxxr.mobile.stock.client.widget.ScrollViewExtend>
</LinearLayout>