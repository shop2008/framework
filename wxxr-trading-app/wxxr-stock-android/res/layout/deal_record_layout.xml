<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        
   <com.wxxr.mobile.stock.client.widget.ScrollViewExtend 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fadingEdge="none">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
			<LinearLayout
		        android:id="@+id/tl_deal_record_list"
		        android:layout_width="match_parent"
		        android:layout_height="80dip" 
		        bind:field="*"
		        bind:on_Click="detailsAction"
		        >
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:layout_weight="1"
				    android:orientation="vertical">
					<TextView
		                android:layout_width="fill_parent"
		                android:layout_height="fill_parent"
		                android:layout_weight="1"
		                android:text="@string/tv_apply_found_label" 
		                android:gravity="center"
		                android:textSize="14sp"
		                android:textColor="@color/white"
		                />
				    <TextView
		                android:layout_width="fill_parent"
		                android:layout_height="fill_parent"
		                android:layout_weight="1"
		                android:text="--" 
		                android:gravity="center"
		                bind:field="fund"
		                android:textSize="14sp"
		                android:textColor="@color/white"
		                />
				</LinearLayout>
				<View android:layout_width="0.5dp"
				    android:layout_height="fill_parent"
				    android:background="#000000"/>
				<View android:layout_width="0.5dp"
				    android:layout_height="fill_parent"
				    android:background="#2F2E30"/>
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:layout_weight="1"
				    android:orientation="vertical">
				    <TextView
		                android:layout_width="fill_parent"
		                android:layout_height="fill_parent"
		                android:layout_weight="1"
		                android:gravity="center"
		                android:text="@string/tv_profit_loss_rate_label" 
		                android:textColor="@color/white"
		                />
		            <TextView
		                android:layout_width="fill_parent"
		                android:layout_height="fill_parent"
		                android:layout_weight="1"
		                android:text="--" 
		                android:gravity="center"
		                android:textSize="14sp"
		                bind:field="plRisk"
		                android:textColor="@color/white"
		                />
				</LinearLayout>
				<View android:layout_width="0.5dp"
				    android:layout_height="fill_parent"
				    android:background="#000000"/>
				<View android:layout_width="0.5dp"
				    android:layout_height="fill_parent"
				    android:background="#2F2E30"/>
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:layout_weight="1"
				    android:orientation="vertical">
		            <TextView
		                android:layout_width="fill_parent"
		                android:layout_height="match_parent"
		                android:layout_weight="1"
		                android:gravity="center"
		                android:text="@string/tv_profit_loss_amount_label" 
		                android:textColor="@color/white"
		                />
				    <TextView
		                android:layout_width="fill_parent"
		                android:layout_height="fill_parent"
		                android:layout_weight="1"
		                android:text="--" 
		                android:gravity="center"
		                android:textSize="14sp"
		                android:textColor="@color/white"
		                bind:field="totalGain"
		                />	
				</LinearLayout>
				<View android:layout_width="0.5dp"
				    android:layout_height="fill_parent"
				    android:background="#000000"
				    android:visibility="gone"/>
				<View android:layout_width="0.5dp"
				    android:layout_height="fill_parent"
				    android:background="#2F2E30"
				    android:visibility="gone"/>
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:layout_weight="1"
				    android:orientation="vertical"
				    android:visibility="gone">
		            <TextView
		                android:layout_width="fill_parent"
		                android:layout_height="match_parent"
		                android:layout_weight="1"
		                android:gravity="center"
		                android:text="实得收益" 
		                android:textColor="@color/white"
		                />
				    <TextView
		                android:layout_width="fill_parent"
		                android:layout_height="fill_parent"
		                android:layout_weight="1"
		                android:text="--" 
		                android:gravity="center"
		                android:textSize="14sp"
		                android:textColor="@color/white"
		                bind:field="userGain"
		                />	
				</LinearLayout>				
		    </LinearLayout>
