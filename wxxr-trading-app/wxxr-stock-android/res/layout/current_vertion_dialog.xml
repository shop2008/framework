<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mid_gray"
    android:orientation="vertical" >
    

    <LinearLayout 
        android:id="@+id/ll_message_body"
        android:layout_width="match_parent"
        android:layout_height="60dp"
		android:orientation="vertical"
		android:gravity="center"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vertion_lastest_text"
            />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_message_body"
        android:orientation="horizontal"
        >
        
        <Button 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/btn_konwn"
            bind:field="*"
            bind:on_Click="known"
            />
    </LinearLayout>
</RelativeLayout>