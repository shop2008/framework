<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bar_bj"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <TextView
            android:id="@id/tv_title_content"
            style="@style/style_title_text"
            android:text="@string/title_message_center" />

        <ImageButton
            android:id="@id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/back_button"
            bind:field="*"
            bind:on_Click="back" />
    </RelativeLayout>
    
        
    <RadioGroup
        android:id="@id/rg_game_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/widget_bar_bg"
            android:button="@null"
            android:gravity="center"
            android:text="@string/tab_account_trade_text"
            bind:field="*"
            bind:on_Click="showAccountTrades" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@drawable/abs_divider_hor_btn" />

        <RadioButton
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/widget_bar_bg"
            android:button="@null"
            android:gravity="center"
            android:text="@string/tab_info_notice_text"
            bind:field="*"
            bind:on_Click="showInfoNotices" />
    </RadioGroup>

    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        
      	<com.wxxr.mobile.stock.client.widget.PinHeaderView
      	    android:layout_width="match_parent"
      	    android:layout_height="match_parent"
      	    bind:field="accountTrades"
      	    android:visibility="visible"
      	    />
       
    </FrameLayout>
</LinearLayout>