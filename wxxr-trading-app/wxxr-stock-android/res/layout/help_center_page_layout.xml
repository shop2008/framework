<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/page_background_color">
    <com.wxxr.mobile.stock.client.widget.PullToRefreshView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    bind:field="acctRefreshView"
	    bind:on_TopRefresh="handleTopRefresh" >
	    <ScrollView
	        android:id="@+id/scrollView1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:scrollbars="none"
	        android:fadingEdge="none"
	        >
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="vertical"
	            android:scrollbars="none"
	            android:fadingEdge="none" >
				<com.wxxr.mobile.stock.client.widget.AutoHeightListView
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:id="@id/lv_help_center_detail"
			        bind:itemViewId="helpCenterItemView"
				    bind:field="helpArticles"
			        bind:on_ItemClick="goWebPageOnItemClick"
			        style="@style/mListView"
			        >
			    </com.wxxr.mobile.stock.client.widget.AutoHeightListView>	            
	        </LinearLayout>
	    </ScrollView>
    </com.wxxr.mobile.stock.client.widget.PullToRefreshView>
</LinearLayout> 