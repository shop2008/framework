<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_selected_item1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" 
            android:orientation="horizontal">

            <TextView
                    android:id="@+id/trade_record_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/trading_stype"
                    bind:field="type" />
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >
                
                <TextView
                    android:id="@+id/trade_record_stock_name"
                    android:layout_toRightOf="@id/trade_record_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="北京银行"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    bind:field="stockName" />

                <TextView
                    android:layout_toRightOf="@id/trade_record_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/trade_record_stock_name"
                    android:layout_below="@id/trade_record_stock_name"
                    android:gravity="center"
                    android:text="6000032"
                    android:textColor="#5D6363"
                    android:textSize="10sp"
                    bind:field="stockCode" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@id/tv_stock_limit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="10万"
            android:textColor="@color/white"
            android:textSize="15sp"
            bind:field="initCredit" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="+3000.88"
            android:textColor="@color/red"
            android:textSize="15sp"
            bind:field="income" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="1月23日"
            android:textColor="@color/white"
            android:textSize="15sp"
            bind:field="date" />
    </LinearLayout>

    <include layout="@layout/hlines" />

</LinearLayout>