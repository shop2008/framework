<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" 
    android:background="@drawable/listview_selected_item1"
    bind:field="*"
    bind:on_Click="handleNoticesItemClick"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/remind_focus"
                bind:field="remindReaded"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/ll_up2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/notice_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="平安银行模拟盘"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" 
                    bind:field="title"
                    />

                <TextView
                    android:id="@+id/notice_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:gravity="right"
                    android:text="2013-11-10"
                    android:textColor="@color/gray"
                    android:textSize="10sp" 
                    bind:field="date"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/notice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_below="@id/ll_up2"
                android:layout_marginLeft="2dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/white"
                android:text="开始系统清仓，清仓时仓位80.88%"
                android:textSize="12sp" 
                bind:field="content"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>