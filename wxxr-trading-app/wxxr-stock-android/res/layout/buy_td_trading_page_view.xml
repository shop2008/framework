<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/page_background_color"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <com.wxxr.mobile.stock.client.widget.PullToRefreshView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                bind:field="acctRefreshView"
                bind:on_PullRefresh="handleRefresh" >

                <ListView
                    style="@style/mListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    bind:field="tradingOrders@StockViewDecorator"
                    bind:headerViewId="TBuyTdTradingPageHeaderView"
                    bind:itemViewId="TBuyTradingItemView"
                    bind:on_ItemClick="handleItemClick"
                    bind:updateAllId="resourceId:id/all"
                    bind:updateFaieldId="resourceId:id/failed"
                    bind:updatingViewId="resourceId:id/progress" />
            </com.wxxr.mobile.stock.client.widget.PullToRefreshView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="尚未买入股票"
                android:textColor="@color/light_gray"
                android:textSize="26sp"
                bind:field="noOrders"
                bind:on_Click="handleBuyBtnClick" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/buy_btn"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@drawable/red_button_style"
            bind:field="buyBtn"
            bind:on_Click="handleBuyBtnClick" >

            <TextView
                android:id="@+id/buy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="买入"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/buy_tv"
                android:src="@drawable/buy_btn" />
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/stock_loading_progress_layout" />

</FrameLayout>