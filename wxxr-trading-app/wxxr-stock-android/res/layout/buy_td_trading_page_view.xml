<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/page_background_color">
    <com.wxxr.mobile.stock.client.widget.PullToRefreshView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buy_btn"
        android:layout_below="@id/message_layout"
        android:orientation="vertical"
        bind:field="acctRefreshView"
        android:layout_weight="1"
        bind:on_PullRefresh="handleRefresh" >

        <ListView
            style="@style/mListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            bind:field="tradingOrders"
            bind:headerViewId="TBuyTdTradingPageHeaderView"
            bind:itemViewId="TBuyTradingItemView"
            bind:on_ItemClick="handleItemClick" />
    </com.wxxr.mobile.stock.client.widget.PullToRefreshView>
    
    <RelativeLayout
        android:id="@+id/buy_btn"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/red_button_style"
        bind:field="buyBtn"
        bind:on_Click="handleBuyBtnClick" >

        <TextView
            android:id="@+id/buy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="买入"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/buy_tv"
            android:src="@drawable/buy_btn" />
    </RelativeLayout>  
</LinearLayout>
