<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<TableLayout
        android:id="@+id/tl_deal_record_list"
        android:layout_width="match_parent"
        android:layout_height="80dip" 
        android:background="@color/black"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dip" 
            android:layout_weight="1" 
            android:layout_margin="2dip"
            android:divider="@drawable/abs_divider"
            >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/tv_apply_found_label" 
                android:textColor="@color/white"
                />
			<View 
			    android:layout_width="1dip"
			    android:layout_height="match_parent"
			    android:background="@drawable/abs_divider"
			    />
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/tv_profit_loss_rate_label" 
                android:textColor="@color/white"
                />
			<View 
			    android:layout_width="1dip"
			    android:layout_height="match_parent"
			    android:background="@drawable/abs_divider"
			    />	
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/tv_profit_loss_amount_label" 
                android:textColor="@color/white"
                />
        </TableRow>
	    <View 
	        android:layout_height="1dip"
	        android:layout_width="match_parent"
	        android:background="@drawable/divider_horizontal"
	        />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dip" 
            android:layout_weight="1"
            android:divider="@drawable/abs_divider"
            >

            <TextView
                android:id="@+id/tv_apply_found"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="10万" />
			<View 
			    android:layout_width="1dip"
			    android:layout_height="match_parent"
			    android:background="@drawable/abs_divider"
			    />
            <TextView
                android:id="@+id/tv_profit_loss_rate"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="0.56%" />
			<View 
			    android:layout_width="1dip"
			    android:layout_height="match_parent"
			    android:background="@drawable/abs_divider"
			    />
            <TextView
                android:id="@+id/tv_profit_loss_amount"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="560.00元" />
        </TableRow>
    </TableLayout>
	
    
    <android.support.v4.view.ViewPager 
        android:id="@+id/vp_deal_record"
        android:layout_width="match_parent"
        android:layout_height="120dip"
        />
</LinearLayout>