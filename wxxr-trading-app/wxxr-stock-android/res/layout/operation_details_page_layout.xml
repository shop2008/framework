<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/page_background_color">
    
    
     <RadioGroup
         android:id="@+id/radioGroup1"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content" 
         android:orientation="horizontal"
         android:background="@drawable/title_background"
         android:gravity="center">

         <RadioButton
             android:id="@+id/radio0"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:checked="true"
             android:layout_weight="1"
             android:button="@null"
             android:gravity="center"
             android:text="成交记录" 
             android:textSize="15sp"
             bind:field="*"
             bind:on_Click="readRecordClick"
             android:background="@drawable/tab_left_btn_background"
             />

         <RadioButton
             android:id="@+id/radio1"
             android:layout_width="fill_parent"
             android:layout_weight="1"
             android:layout_height="fill_parent"
             android:text="清算详情" 
             android:gravity="center"
             android:button="@null"
             android:textSize="15sp"
             bind:field="*"
             bind:on_Click="tabSelectedClick"
             android:background="@drawable/tab_right_btn_background"/>
     </RadioGroup>

     <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        bind:field="contents"
        />
</LinearLayout>
