    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    xmlns:bind="http://wxxr.com.cn/binding">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        bind:field="minuteHeaderOne">
		<include layout="@layout/common_stock_header_layout1"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        bind:field="minuteHeaderTwo"
        android:visibility="gone">
		<include layout="@layout/common_stock_header_layout"/>
    </LinearLayout>
	<com.wxxr.mobile.stock.client.widget.MinuteLineView 
		 android:layout_width="match_parent"
		 android:layout_height="160dp"
		 bind:field="stockMinuteData" />
</LinearLayout>
