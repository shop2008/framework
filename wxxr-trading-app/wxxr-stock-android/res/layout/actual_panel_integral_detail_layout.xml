<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/page_background_color"
    >
    
    <com.wxxr.mobile.stock.client.widget.PullToRefreshListView 
        android:id="@+id/lv_integral_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        bind:itemViewId="actualScoreItemView"
        bind:on_ItemClick="itemClicked"
        bind:field="actualScores"
        android:scrollbars="none"
        bind:on_BottomRefresh="refreshBottomData"
        bind:on_TopRefresh="refreshTopData"
        />
    
</LinearLayout>