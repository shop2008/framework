<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background_color" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:background="@drawable/back1"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="8dp"
                bind:field="userHomeBack" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/default_user_icons"
                        bind:field="userIcon" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/imageView1"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView1"
                        android:paddingLeft="10dp"
                        android:text="海绵宝宝"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        bind:field="userNickName"
                        bind:on_Click="setNickName" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#202123"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="累积实盘积分"
                        android:textColor="#959E9D"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150000"
                        android:textColor="#FF2101"
                        android:textSize="20sp" />
                </LinearLayout>

                <include layout="@layout/divider_vertical_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="累积总收益"
                        android:textColor="#959E9D"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14511.88"
                        android:textColor="#FF2101"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#202123" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#0A0406" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#1B1C1E"
                    android:gravity="center_vertical"
                    android:padding="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/label_join_trade_panel"
                        android:textColor="#FEFEFE" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shared_text"
                            android:textColor="#FEFEFE" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_default_text"
                            android:textColor="#FF2101"
                            bind:field="joinSharedNum" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shared_unit"
                            android:textColor="#FEFEFE" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#2F2D30" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="#222325" >

                    <TextView
                        style="@style/LabelStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/label_stock" />

                    <include layout="@layout/label_divider_vline" />

                    <TextView
                        style="@style/LabelStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/label_amount" />

                    <include layout="@layout/label_divider_vline" />

                    <TextView
                        style="@style/LabelStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/label_profit_loss" />

                    <include layout="@layout/label_divider_vline" />

                    <TextView
                        style="@style/LabelStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/label_date" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#010101" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"
                        bind:field="jSharedVisiable" >

                        <com.wxxr.mobile.stock.client.widget.NoScrollListView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@null"
                            android:dividerHeight="0dp"
                            android:footerDividersEnabled="true"
                            bind:field="joinTradeInfos@StockViewDecorator"
                            bind:itemViewId="uPageItemView"
                            bind:on_ItemClick="joinItemClick"
                            bind:updateAllId="resourceId:id/all"
                            bind:updateFaieldId="resourceId:id/failed"
                            bind:updatingViewId="resourceId:id/progress" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/user_no_shared_text"
                        android:textSize="18sp"
                        android:visibility="visible"
                        bind:field="jNoSharedVisiable" />
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#2F2D30" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#18191B"
                    android:gravity="center"
                    android:text="@string/view_more_text"
                    android:textColor="@color/white"
                    bind:field="*"
                    bind:on_Click="joinViewMore" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#0C0306" />
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#2E2E30" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#1B1C1E"
                    android:gravity="center_vertical"
                    android:padding="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/label_challenge_trade_panel"
                        android:textColor="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shared_text"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_default_text"
                            android:textColor="#FD2300"
                            bind:field="challengeSharedNum" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shared_unit"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#2F2F31" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#222325" >

                    <TextView
                        style="@style/LabelStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/label_stock" />

                    <include layout="@layout/label_divider_vline" />

                    <TextView
                        style="@style/LabelStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/label_amount" />

                    <include layout="@layout/label_divider_vline" />

                    <TextView
                        style="@style/LabelStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/label_profit_loss" />

                    <include layout="@layout/label_divider_vline" />

                    <TextView
                        style="@style/LabelStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/label_date" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"
                        bind:field="cSharedVisiable" >

                        <com.wxxr.mobile.stock.client.widget.NoScrollListView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@null"
                            android:dividerHeight="0dp"
                            android:footerDividersEnabled="true"
                            bind:field="challengeTradeInfos@StockViewDecorator"
                            bind:itemViewId="uPageItemView"
                            bind:on_ItemClick="challengeItemClick"
                            bind:updateAllId="resourceId:id/all"
                            bind:updateFaieldId="resourceId:id/failed"
                            bind:updatingViewId="resourceId:id/progress" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/bg_view_more"
                            android:gravity="center"
                            android:text="@string/view_more_text"
                            android:textColor="@color/white"
                            bind:field="*"
                            bind:on_Click="challengeViewMore" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/user_no_shared_text"
                        android:textSize="18sp"
                        android:visibility="visible"
                        bind:field="cNoSharedVisiable" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/stock_loading_progress_layout" />

</RelativeLayout>