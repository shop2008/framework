<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@color/light_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="2dip" >

        <LinearLayout
            android:id="@+id/stock_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/stock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="----"
                android:textColor="@color/white"
                android:textSize="15sp"
                bind:field="name" />

            <TextView
                android:id="@+id/stock_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="(--.--)"
                android:textColor="@color/white"
                android:textSize="10sp"
                bind:field="code" />
        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/stock_layout"
            android:layout_alignParentRight="true"
            android:includeFontPadding="false"
            android:text="--"
            android:textColor="@color/white"
            android:textSize="10sp"
            bind:field="time" />

        <TextView
            android:id="@+id/up_rates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/time"
            android:layout_alignParentRight="true"
            android:includeFontPadding="false"
            android:text="(--)"
            android:textColor="@color/white"
            android:textSize="10sp"
            bind:field="risefallRate" />

        <TextView
            android:id="@+id/up_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/time"
            android:layout_marginRight="4dip"
            android:layout_toLeftOf="@id/up_rates"
            android:includeFontPadding="false"
            android:text="--"
            android:textColor="@color/white"
            android:textSize="10sp"
            bind:field="change" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingRight="24dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                bind:field="newprice" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/up_arrows"
                bind:field="newpriceIcon" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        bind:field="quotation" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.05dip"
                android:background="@color/light_gray"
                android:paddingBottom="4dip" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dip"
                    android:paddingTop="4dip"
                    android:text="卖5"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="4dip"
                    android:paddingTop="4dip"
                    android:text="0.00"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    bind:field="sellPrice5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="4dip"
                    android:paddingTop="4dip"
                    android:text="0"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    bind:field="sellVolume5" />

                <TextView
                    android:layout_width="0.05dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
