        android:layout_height="0.1dip"
        android:background="@color/light_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <TextView
            android:id="@+id/stock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="白云机场"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            bind:field="name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/stock_name"
            android:text="(600004.SH)"
            android:textColor="@color/white"
            android:textSize="12sp"
            bind:field="code" />

        <TextView
            android:id="@+id/up_rates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="+0.07(+1.01%)"
            android:textColor="@color/red"
            android:textSize="12sp"
            bind:field="changeRisefallRate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/stock_name"
            android:text="2013-11-20 15:03:02"
            android:textColor="@color/white"
            android:textSize="12sp"
            bind:field="time" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingRight="24dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.98"
                android:textColor="@color/red"
                android:textSize="24sp"
                android:textStyle="bold"
                bind:field="newprice" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/up_arrows"
                bind:field="newpriceIcon" />
        </LinearLayout>
    </RelativeLayout>

