<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:background="@color/page_background_color">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#eed320"
        android:orientation="horizontal"
        android:gravity="center_vertical" 
        android:paddingLeft="8dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/liwu" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="了解短线放大镜交易规则，领取新手奖励8000实盘积分！" 
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:textSize="14sp"/>
    </LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="8dp"
	    android:gravity="center_vertical">
	    <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:src="@drawable/head2" />

	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" 
	        android:paddingLeft="8dp"
	        android:layout_weight="1"
	        android:gravity="center_vertical">

	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/white"
            	android:textSize="14sp"
	            android:text="大家好，我是吉祥物K线哥~" />

	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/white"
            	android:textSize="14sp"
	            android:text="您有任何疑问都可以问我哦！" 
	            android:layout_marginTop="6dp"/>
	        
	    </LinearLayout>

	    <ImageView
	        android:id="@+id/imageView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/arrow" />
	    
	</LinearLayout>
	<View android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="#000000"/>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:layout_marginBottom="8dp"
	    android:padding="10dp"
	    android:background="#f9f6e3">
	    <TextView android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="短线放大镜"
	        android:gravity="center"
	        android:textColor="@color/black"
            android:textSize="16sp"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="6dp"
	        android:layout_marginBottom="6dp">

	        <TextView
	            android:id="@+id/textView4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="1. " 
	            android:textColor="@color/black"
            	android:textSize="14sp"/>

	        <TextView
	            android:id="@+id/textView5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="首款" 
	            android:textColor="@color/red"
            	android:textSize="14sp"/>

	        <TextView
	            android:id="@+id/textView6"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="模拟炒股能赚真钱的手机应用" 
	            android:textColor="@color/black"
            	android:textSize="14sp"/>
	        
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="6dp">

	        <TextView
	            android:id="@+id/textView4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="2. " 
	            android:textColor="@color/black"
            	android:textSize="14sp"/>

	        <TextView
	            android:id="@+id/textView5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="10倍杠杆" 
	            android:textColor="@color/red"
            	android:textSize="14sp"/>

	        <TextView
	            android:id="@+id/textView6"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="交易，放大您的操盘收益" 
	            android:textColor="@color/black"
            	android:textSize="14sp"/>
	        
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="6dp">

	        <TextView
	            android:id="@+id/textView4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="3. " 
	            android:textColor="@color/black"
            	android:textSize="14sp"/>

	        <TextView
	            android:id="@+id/textView6"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="T+1与T+3两种操盘期限任您选择" 
	            android:textColor="@color/black"
            	android:textSize="14sp"/>
	        
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">

	        <TextView
	            android:id="@+id/textView4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="3. " 
	            android:textColor="@color/black"
            	android:textSize="14sp"/>
			<TextView
	            android:id="@+id/textView5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="利润大！" 
	            android:textColor="@color/red"
            	android:textSize="14sp"/>
	        <TextView
	            android:id="@+id/textView6"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="80%操盘利润归玩家所有" 
	            android:textColor="@color/black"
            	android:textSize="14sp"/>
	        
	    </LinearLayout>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:layout_marginBottom="8dp"
	    android:background="#f9f6e3">
	    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
		    <LinearLayout 
		        android:layout_weight="1"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#cfcdbe"
		        android:orientation="vertical"
		        android:paddingTop="8dp">
		        <TextView android:text="普通炒股案例"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center"
		            android:textColor="#5b5a58"
            		android:textSize="16sp"/>
		        <TextView 
		            android:text="本金1万元 若股票涨8%\n获利=1万元x8%=800元"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:textColor="#5b5a58"
            		android:textSize="13sp"
            		android:padding="6dp"/>
		    </LinearLayout>
		     <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:orientation="vertical"
		        android:paddingTop="8dp">
		        <TextView android:text="短线放大镜案例"
		            android:layout_width="fill_parent"
		            android:gravity="center"
		            android:textColor="@color/black"
            		android:textSize="16sp"
		            android:layout_height="wrap_content"/>
		        <TextView 
		            android:text="1万元可申购10万元资金\n零利息、获利二八分"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:textColor="#000000"
            		android:textSize="13sp"
            		android:padding="6dp"/>
		      </LinearLayout>
	    </LinearLayout>
		<TextView 
		      android:text="同样上涨8%实际获利≈10万元x8%x80%=6400元短线放大镜一次交易将多赚≈6400元-800元=5600元"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:textColor="#000000"
    		  android:textSize="13sp"
    		  android:paddingLeft="6dp"
    		  android:paddingTop="4dp"
    		  android:paddingRight="6dp"
    		  android:paddingBottom="8dp"/>
	</LinearLayout>
    <View android:layout_width="fill_parent"
          android:layout_height="0.5dp"
          android:background="#2F2E30"/>	
	<LinearLayout 
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:orientation="horizontal"
	       android:background="#222325"
	       android:gravity="center_vertical"
	       android:paddingLeft="8dp"
	       >
		<TextView 
	           android:layout_width="fill_parent"
	           android:layout_height="32dp"
	           android:text="常见问题"
	           android:textColor="#FFFFFF"
	           android:textSize="15sp"
	           android:gravity="center_vertical"
	           />
	</LinearLayout>
    <View android:layout_width="fill_parent"
          android:layout_height="0.5dp"
          android:background="#000000"/>		
</LinearLayout>
