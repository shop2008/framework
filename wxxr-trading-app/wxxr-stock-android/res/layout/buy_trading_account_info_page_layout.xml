<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background_color" >

    <LinearLayout
        android:id="@+id/date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/date_bj"
        android:gravity="center"
        bind:field="titleBg" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/white"
            android:textSize="15sp"
            bind:field="buyDay" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/white"
            android:textSize="15sp"
            bind:field="sellDay" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_layout"
        android:layout_margin="2dp"
        android:background="@drawable/bu_message_radius"
        android:gravity="center"
        bind:field="messageLayout" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:maxLines="2"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            bind:field="message" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/search_2_btn"
            bind:field="closeBtn"
            bind:on_Click="handleCloseBtnClick" />
    </LinearLayout>

    <Button
        android:id="@+id/buy_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/buy_button_bule_btn"
        android:gravity="center"
        android:text="买入"
        android:textColor="@color/white"
        android:textSize="15sp"
        bind:field="buyBtn"
        bind:on_Click="handleBuyBtnClick" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buy_btn"
        android:layout_below="@id/message_layout"
        android:layout_marginTop="40dip"
        android:gravity="center"
        android:text="尚未买入股票"
        android:textColor="@color/light_gray"
        android:textSize="26sp"
        bind:field="noOrders" />

    <com.wxxr.mobile.stock.client.widget.PullToRefreshView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buy_btn"
        android:layout_below="@id/message_layout"
        android:orientation="vertical"
        bind:field="acctRefreshView"
        bind:on_TopRefresh="handleTopRefresh" >

        <ListView
            style="@style/mListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            bind:field="tradingOrders"
            bind:headerViewId="TBuyTradingPageHeaderView"
            bind:itemViewId="TBuyTradingItemView"
            bind:on_ItemClick="handleItemClick" />
    </com.wxxr.mobile.stock.client.widget.PullToRefreshView>

</RelativeLayout>