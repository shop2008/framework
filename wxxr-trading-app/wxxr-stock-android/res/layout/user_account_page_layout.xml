<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  	xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

	<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bar_bj"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <TextView
            android:id="@id/tv_title_content"
            style="@style/style_title_text"
            android:text="@string/tv_title_personal_page" />

        <ImageButton
            android:id="@id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/back_button"
            bind:field="*"
            bind:on_Click="back" />


    </RelativeLayout> 
    
    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_user_account" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/tv_balance_label" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/tv_freeze_label" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/tv_usable_label" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_balance_text"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="@string/tv_default_text"
                android:gravity="center" 
                bind:field="userBalance"
                />

            <TextView
                android:id="@+id/tv_freeze_text"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="@string/tv_default_text"
                android:gravity="center" 
                bind:field="userFreeze"
                />

            <TextView
                android:id="@+id/tv_usable_text"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="@string/tv_default_text"
                android:gravity="center" 
                bind:field="userAvalible"
                />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_user_account"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_extract_cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:clickable="true"
            android:background="@drawable/bg_rl_user_account"
            bind:field="*"
            bind:on_Click="drawCash"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dip"
                android:textColor="@color/black"
                android:text="@string/tv_extract_cash" />

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_right" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/rl_income_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:clickable="true"
            android:background="@drawable/bg_rl_user_account"
            bind:field="*"
            bind:on_Click="incomeDetail"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dip"
                android:textColor="@color/black"
                android:text="@string/tv_income_detail" />

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_right" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>