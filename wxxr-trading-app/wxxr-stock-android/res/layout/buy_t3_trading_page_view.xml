<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/page_background_color"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/tab_01"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="T日"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="T+1"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="T+2日"
                android:textColor="#989e9e"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="T+3日"
                android:textColor="#989e9e"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/message_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/bu_message_radius"
            android:gravity="center"
            android:visibility="gone"
            bind:field="messageLayout" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:maxLines="2"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                bind:field="message" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/search_2_btn"
                bind:field="closeBtn"
                bind:on_Click="handleCloseBtnClick" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <com.wxxr.mobile.stock.client.widget.PullToRefreshView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                bind:field="acctRefreshView"
                bind:on_PullRefresh="handleRefresh" >

                <ListView
                    style="@style/mListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    bind:field="tradingOrders@StockViewDecorator"
                    bind:headerViewId="TBuyTradingPageHeaderView"
                    bind:itemViewId="TBuyTradingItemView"
                    bind:on_ItemClick="handleItemClick"
                    bind:updateAllId="resourceId:id/all"
                    bind:updateFaieldId="resourceId:id/failed"
                    bind:updatingViewId="resourceId:id/progress" />
            </com.wxxr.mobile.stock.client.widget.PullToRefreshView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="尚未买入股票"
                android:textColor="@color/light_gray"
                android:textSize="26sp"
                bind:field="noOrders"
                bind:on_Click="handleBuyBtnClick" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/buy_btn"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@drawable/red_button_style"
            bind:field="buyBtn"
            bind:on_Click="handleBuyBtnClick" >

            <TextView
                android:id="@+id/buy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="买入"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/buy_tv"
                android:src="@drawable/buy_btn" />
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/stock_loading_progress_layout" />

</FrameLayout>