<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/context_bj"
    android:padding="8dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="初始金额：10万元" 
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"/>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="终止止损：" 
	        android:textSize="14sp"
	        android:textColor="@color/white"
	        android:layout_marginTop="8dp"/>
	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        bind:field="capitalRate"
	        android:text="--" 
	        android:textSize="14sp"
	        android:textColor="@color/white"
	        android:layout_marginTop="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="T+1日盘中触及或击穿中止止损率，系统自动中止玩家操作权，并以中止止损率进行亏损清算" 
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="提交申请" 
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/blue_button_style"
        android:layout_marginTop="8dp"
        bind:field="submitBtnStatus1"
        bind:on_Click="submitDataClick1@BuyStockClickedDecorator" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" 
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        >

        <CheckBox
            android:id="@+id/cb_agree_or_not"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_cb_read_rule_or_not"
            android:button="@null"
            android:checked="true" 
            bind:field="isChecked1"
            bind:on_Click="isCheckBoxChecked1"
            />

        <TextView
            android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_have_read_rule_text"
            android:textSize="14sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_trade_rule_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易规则"
            bind:field="*"
            android:enabled="true"
            android:clickable="true"
            bind:on_Click="showTradingRulePage"
            android:textSize="14sp"
            android:textColor="@color/red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_right_quotes"
            android:textColor="@color/white" 
            android:textSize="14sp"
            />
    </LinearLayout>
    
</LinearLayout>
