<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@drawable/listview_selected_item1"
    android:padding="4dp">
    <LinearLayout 
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView 
            android:id="@id/tv_stock_name_price"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="招商银行"
        	bind:field="stockName"
        	android:gravity="center"
        	android:textSize="14sp"
        	android:textColor="@color/white"
            />

        <TextView
            android:id="@id/tv_stock_code_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="(600036)"
            android:textSize="12sp"
            bind:field="stockCode"
            android:textColor="@color/gray" />

    </LinearLayout>
    
    <TextView 
        android:id="@id/tv_lastest_price"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="10万"
        bind:field="stockPrice"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/white"
        />

    <TextView 
        android:id="@id/tv_up_down_rate"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="-1020023"
        bind:field="stockDeltaPercent"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/white"
        />
</LinearLayout>