<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    bind:on_ItemClick="handleStockItemClick"
    android:orientation="horizontal" >
    
    
    <LinearLayout 
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        
        <TextView 
            android:id="@id/tv_stock_name_price"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="招商银行"
        	bind:field="stockName"
        	android:gravity="center"
        	android:textSize="20sp"
            />
        
        <TextView 
            android:id="@id/tv_stock_code_price"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="(600036)"
        	bind:field="stockCode"
        	android:gravity="center"
        	android:textSize="15sp"
            />
    </LinearLayout>
    
    <TextView 
        android:id="@id/tv_lastest_price"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="10万"
        bind:field="stockPrice"
        android:gravity="center"
        />

    <TextView 
        android:id="@id/tv_up_down_rate"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="-1020023"
        bind:field="stockDeltaPercent"
        android:gravity="center"
        />
</LinearLayout>