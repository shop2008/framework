<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/page_background_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="@drawable/dsphb_title_bj">
        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                bind:field="*"
                bind:on_Click="showChallengeTradingClick"
                android:text="挑战交易盘" 
                android:padding="8dp"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="参赛交易盘" 
                android:gravity="center"
                android:button="@null"
                android:textSize="15sp"
                bind:field="*"
                bind:on_Click="showParticipatingTradingClick"
                android:padding="8dp"/>
        </RadioGroup>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:padding="8dp">
        <!-- 挑战交易盘 开始 -->
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:visibility="visible"
            bind:field="showChallengeTrading"
            >
			<include layout="@layout/challenge_trade_page_layout"/>
        </LinearLayout>
        <!-- 挑战交易盘 结束 -->
         <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:visibility="invisible"
            bind:field="showParticipatingTrading">
			<include layout="@layout/participating_trade_page_layout"/>
		</LinearLayout>	
    </FrameLayout>

</LinearLayout>