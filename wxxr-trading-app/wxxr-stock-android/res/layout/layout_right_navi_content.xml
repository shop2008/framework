<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <RelativeLayout
        android:id="@id/rl_personal_sample_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="4dp"
        bind:field="*"
        bind:on_Click="handleClickImage" >

        <ImageView
            android:id="@id/iv_personal_pic"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/head4"
            bind:field="headIcon" />

        <TextView
            android:id="@id/tv_nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/iv_personal_pic"
            android:paddingLeft="8dp"
            android:text="登录账号"
            android:textColor="@color/black"
            android:textSize="14sp"
            bind:field="nickName" />

        <TextView
            android:id="@id/tv_user_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_personal_pic"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/iv_personal_pic"
            android:gravity="bottom"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="13sp"
            bind:field="userNum" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        bind:field="userRegistered" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#cdcccc" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:background="#cdcccc" />

            <LinearLayout
                android:id="@+id/ll_news_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:padding="8dp"
                bind:field="*"
                bind:on_Click="handleClickUnread" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/msg" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_unread_news_count"
                        style="@style/redTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        bind:field="unreadNews" />

                    <TextView
                        style="@style/userMsgStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="条未读" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:background="#cdcccc" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:padding="8dp"
                bind:field="*"
                bind:on_Click="handleClickBalance" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jf" />

                <com.wxxr.mobile.stock.client.widget.MarqueeText
                    android:id="@+id/tv_integral_balance"
                    style="@style/userMsgStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    bind:field="integralBalance" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:background="#cdcccc" />

            <LinearLayout
                android:id="@+id/ll_user_account"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:padding="8dp"
                bind:field="*"
                bind:on_Click="handleClickCash" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tz" />

                <com.wxxr.mobile.stock.client.widget.MarqueeText
                    android:id="@+id/tv_user_account_balance"
                    style="@style/userMsgStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    bind:field="accountBalance" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:background="#cdcccc" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#cdcccc" />
    </LinearLayout>

</LinearLayout>