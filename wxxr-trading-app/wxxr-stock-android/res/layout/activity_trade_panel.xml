<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    >
    

    <include 
        android:id="@+id/title_trade_panel"
        layout="@layout/activity_title_bar"
        />
    
    
    <LinearLayout 
        android:layout_marginTop="2dip"
        android:id="@+id/ll_trade_time"
        android:layout_below="@id/title_trade_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_red_double"
        android:orientation="horizontal"
        >
        
        <TextView 
            android:id="@+id/textview1"
            android:layout_width="0dip"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3月22日买入"
            android:textColor="@color/white"
            android:gravity="center"
            />
        
        <TextView 
            android:id="@+id/textview2"
            android:layout_width="0dip"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3月22日买入"
            android:textColor="@color/white"
            android:gravity="center"
            />
        
    </LinearLayout>
    
    
    <com.wxxr.stock.trading.ui.widget.PullToRefreshView
        android:id="@+id/refresh_trade_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_trade_time"
        android:layout_marginBottom="60dip"
        android:orientation="vertical"
        >
        <ListView 
            android:id="@+id/lv_trade_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            >
        </ListView>
    </com.wxxr.stock.trading.ui.widget.PullToRefreshView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal" 
        android:layout_alignParentBottom="true"
        android:background="@color/gray"
        >
        <Button
            android:id="@+id/btn_buy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/red_btn_back"
            android:text="买入" />
    </LinearLayout>
    
</RelativeLayout>